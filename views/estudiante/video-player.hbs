<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - StartEducation</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
    
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #ea580c;
            --primary-hover: #c2410c;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --text-dark: #1f2937;
            --text-muted: #6b7280;
            --border-color: #e5e7eb;
            --bg-light: #f8fafc;
        }

        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            color: var(--text-dark);
            min-height: 100vh;
            margin: 0;
            padding: 0;
        }

        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .video-header {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border: 1px solid var(--border-color);
            padding: 2rem;
            margin-bottom: 2rem;
        }

        .video-title {
            color: var(--primary-color);
            font-weight: 700;
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .video-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-bottom: 1.5rem;
        }

        .user-info-section {
            display: flex;
            align-items: center;
            gap: 1rem;
            flex-wrap: wrap;
        }

        .user-badge {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .video-content {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border: 1px solid var(--border-color);
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .video-player-section {
            position: relative;
            background: #000;
        }

        .vimeo-container {
            position: relative;
            width: 100%;
            height: 0;
            padding-bottom: 56.25%; /* 16:9 aspect ratio */
        }

        .vimeo-container iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            border: none;
        }

        .video-info-section {
            padding: 2rem;
        }

        .video-meta {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .meta-item {
            background: var(--bg-light);
            padding: 1rem;
            border-radius: 12px;
            border: 1px solid var(--border-color);
        }

        .meta-label {
            font-size: 0.75rem;
            font-weight: 600;
            color: var(--text-muted);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0.5rem;
        }

        .meta-value {
            font-size: 1rem;
            font-weight: 500;
            color: var(--text-dark);
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-publicado {
            background: rgba(16, 185, 129, 0.1);
            color: #059669;
        }

        .status-borrador {
            background: rgba(245, 158, 11, 0.1);
            color: #d97706;
        }

        .status-archivado {
            background: rgba(107, 114, 128, 0.1);
            color: #4b5563;
        }

        .video-description {
            background: var(--bg-light);
            padding: 1.5rem;
            border-radius: 12px;
            border: 1px solid var(--border-color);
            margin-bottom: 2rem;
        }

        .description-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .description-text {
            color: var(--text-muted);
            line-height: 1.6;
            margin: 0;
        }

        .action-buttons {
            display: flex;
            gap: 1rem;
            flex-wrap: wrap;
            justify-content: center;
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
            border: none;
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary-hover) 0%, var(--primary-color) 100%);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(234, 88, 12, 0.3);
        }

        .btn-outline-secondary {
            border-color: var(--border-color);
            color: var(--text-muted);
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .btn-outline-secondary:hover {
            background: var(--bg-light);
            border-color: var(--primary-color);
            color: var(--primary-color);
            transform: translateY(-1px);
        }

        .loading-state {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 400px;
            color: var(--text-muted);
        }

        .loading-spinner {
            border: 3px solid var(--border-color);
            border-top: 3px solid var(--primary-color);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin-right: 1rem;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .fullscreen-btn {
            position: absolute;
            bottom: 1rem;
            right: 1rem;
            background: rgba(0, 0, 0, 0.7);
            color: white;
            border: none;
            padding: 0.5rem;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.3s ease;
            z-index: 10;
        }

        .fullscreen-btn:hover {
            background: rgba(0, 0, 0, 0.9);
        }

        @media (max-width: 768px) {
            .main-container {
                padding: 1rem;
            }
            
            .video-title {
                font-size: 2rem;
            }
            
            .video-header,
            .video-info-section {
                padding: 1.5rem;
            }
            
            .video-meta {
                grid-template-columns: 1fr;
            }
            
            .action-buttons {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <div class="video-header">
            <div class="d-flex justify-content-between align-items-start flex-wrap">
                <div class="flex-grow-1">
                    <h1 class="video-title">
                        <i class="bi bi-play-circle"></i>
                        {{videoTitle}}
                    </h1>
                    <p class="video-subtitle">{{videoDescription}}</p>
                    <div class="user-info-section">
                        <div class="user-badge">
                            <i class="bi bi-person-circle"></i>
                            {{userName}}
                        </div>
                        <span class="badge bg-secondary">{{userRole}}</span>
                        <small class="text-muted">
                            <i class="bi bi-envelope"></i>
                            {{userEmail}}
                        </small>
                    </div>
                </div>
                <div class="action-buttons mt-3 mt-md-0">
                    <button class="btn btn-outline-secondary" onclick="window.close()">
                        <i class="bi bi-arrow-left"></i> Cerrar
                    </button>
                </div>
            </div>
        </div>

        <!-- Video Content Section -->
        <div class="video-content">
            <!-- Video Player -->
            <div class="video-player-section">
                <div class="vimeo-container">
                    <iframe 
                        src="https://player.vimeo.com/video/{{videoId}}?badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479" 
                        frameborder="0" 
                        allow="autoplay; fullscreen; picture-in-picture; clipboard-write; encrypted-media; web-share" 
                        referrerpolicy="strict-origin-when-cross-origin" 
                        title="{{videoTitle}}"
                        id="vimeoPlayer">
                    </iframe>
                </div>
                <button class="fullscreen-btn" onclick="toggleFullscreen()" title="Pantalla completa">
                    <i class="bi bi-fullscreen"></i>
                </button>
            </div>

            <!-- Video Information -->
            <div class="video-info-section">
                <!-- Video Metadata -->
                <div class="video-meta">
                    {{#if videoDuration}}
                    <div class="meta-item">
                        <div class="meta-label">Duraci√≥n</div>
                        <div class="meta-value">
                            <i class="bi bi-clock"></i>
                            <span id="durationDisplay">{{videoDuration}}s</span>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if videoOrder}}
                    <div class="meta-item">
                        <div class="meta-label">Orden</div>
                        <div class="meta-value">
                            <i class="bi bi-list-ol"></i>
                            Lecci√≥n #{{videoOrder}}
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if videoStatus}}
                    <div class="meta-item">
                        <div class="meta-label">Estado</div>
                        <div class="meta-value">
                            <span class="status-badge status-{{videoStatus}}">
                                {{#if (eq videoStatus 'publicado')}}
                                    <i class="bi bi-check-circle"></i>
                                {{else if (eq videoStatus 'borrador')}}
                                    <i class="bi bi-clock"></i>
                                {{else}}
                                    <i class="bi bi-archive"></i>
                                {{/if}}
                                {{videoStatus}}
                            </span>
                        </div>
                    </div>
                    {{/if}}
                    
                    {{#if moduleId}}
                    <div class="meta-item">
                        <div class="meta-label">M√≥dulo</div>
                        <div class="meta-value">
                            <i class="bi bi-collection"></i>
                            M√≥dulo {{moduleId}}
                        </div>
                    </div>
                    {{/if}}
                </div>

                <!-- Video Description -->
                {{#if videoDescription}}
                <div class="video-description">
                    <div class="description-title">
                        <i class="bi bi-info-circle"></i>
                        Descripci√≥n del Video
                    </div>
                    <p class="description-text">{{videoDescription}}</p>
                </div>
                {{/if}}

                <!-- Progress Section -->
                <div class="video-description">
                    <div class="description-title">
                        <i class="bi bi-graph-up"></i>
                        Progreso de Reproducci√≥n
                    </div>
                    <div class="progress mb-3" style="height: 8px;">
                        <div class="progress-bar" role="progressbar" style="width: 0%; background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);" id="progressFill"></div>
                    </div>
                    <div class="d-flex justify-content-between small text-muted">
                        <span id="currentTime">0:00</span>
                        <span id="totalTime">--:--</span>
                    </div>
                </div>

                <!-- Control Buttons -->
                <div class="action-buttons">
                    <button class="btn btn-primary" onclick="togglePlayPause()" id="playPauseBtn">
                        <i class="bi bi-pause-fill"></i> Pausar
                    </button>
                    <button class="btn btn-outline-secondary" onclick="restartVideo()">
                        <i class="bi bi-arrow-clockwise"></i> Reiniciar
                    </button>
                    <button class="btn btn-outline-secondary" onclick="toggleFullscreen()">
                        <i class="bi bi-fullscreen"></i> Pantalla Completa
                    </button>
                    <button class="btn btn-outline-secondary" onclick="window.history.back()">
                        <i class="bi bi-arrow-left"></i> Volver
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5.3 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Vimeo Player API -->
    <script src="https://player.vimeo.com/api/player.js"></script>
    
    <script>
        // Inicializar el reproductor de Vimeo
        const iframe = document.querySelector('#vimeoPlayer');
        const player = new Vimeo.Player(iframe);
        
        let isPlaying = true;
        let duration = 0;
        
        // Elementos del DOM
        const progressFill = document.getElementById('progressFill');
        const currentTimeSpan = document.getElementById('currentTime');
        const totalTimeSpan = document.getElementById('totalTime');
        const playPauseBtn = document.getElementById('playPauseBtn');
        
        // Obtener duraci√≥n del video
        player.getDuration().then(function(videoDuration) {
            duration = videoDuration;
            totalTimeSpan.textContent = formatTime(duration);
        }).catch(function(error) {
            console.log('Error obteniendo duraci√≥n:', error);
        });
        
        // Actualizar progreso
        player.on('timeupdate', function(data) {
            const currentTime = data.seconds;
            const progress = duration > 0 ? (currentTime / duration) * 100 : 0;
            
            progressFill.style.width = progress + '%';
            currentTimeSpan.textContent = formatTime(currentTime);
        });
        
        // Eventos del reproductor
        player.on('play', function() {
            isPlaying = true;
            playPauseBtn.innerHTML = '<i class="bi bi-pause-fill"></i> Pausar';
            console.log('‚ñ∂Ô∏è Video iniciado');
        });
        
        player.on('pause', function() {
            isPlaying = false;
            playPauseBtn.innerHTML = '<i class="bi bi-play-fill"></i> Reproducir';
            console.log('‚è∏Ô∏è Video pausado');
        });
        
        player.on('ended', function() {
            console.log('‚úÖ Video completado');
            progressFill.style.width = '100%';
            playPauseBtn.innerHTML = '<i class="bi bi-arrow-clockwise"></i> Repetir';
            isPlaying = false;
        });
        
        // Funciones de control
        function togglePlayPause() {
            if (isPlaying) {
                player.pause();
            } else {
                player.play();
            }
        }
        
        function restartVideo() {
            player.setCurrentTime(0).then(function() {
                player.play();
                console.log('üîÑ Video reiniciado');
            }).catch(function(error) {
                console.log('Error reiniciando video:', error);
            });
        }
        
        function toggleFullscreen() {
            player.requestFullscreen().catch(function(error) {
                console.log('Error activando pantalla completa:', error);
                
                // Fallback: fullscreen del iframe
                const elem = iframe;
                if (elem.requestFullscreen) {
                    elem.requestFullscreen();
                } else if (elem.webkitRequestFullscreen) {
                    elem.webkitRequestFullscreen();
                } else if (elem.mozRequestFullScreen) {
                    elem.mozRequestFullScreen();
                } else if (elem.msRequestFullscreen) {
                    elem.msRequestFullscreen();
                }
            });
        }
        
        // Funci√≥n para formatear tiempo
        function formatTime(seconds) {
            if (!seconds || isNaN(seconds)) return '0:00';
            
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return mins + ':' + (secs < 10 ? '0' : '') + secs;
        }
        
        // Atajos de teclado
        document.addEventListener('keydown', function(e) {
            // No interceptar si hay un input enfocado
            if (document.activeElement.tagName === 'INPUT' || document.activeElement.tagName === 'TEXTAREA') {
                return;
            }
            
            switch(e.code) {
                case 'Space':
                    e.preventDefault();
                    togglePlayPause();
                    break;
                case 'KeyR':
                    if (e.ctrlKey || e.metaKey) {
                        e.preventDefault();
                        restartVideo();
                    }
                    break;
                case 'KeyF':
                    if (e.ctrlKey || e.metaKey) {
                        e.preventDefault();
                        toggleFullscreen();
                    }
                    break;
                case 'Escape':
                    if (document.fullscreenElement) {
                        document.exitFullscreen();
                    }
                    break;
            }
        });
        
        // Formatear duraci√≥n inicial si existe
        const durationDisplay = document.getElementById('durationDisplay');
        {{#if videoDuration}}
        if (durationDisplay) {
            const seconds = {{videoDuration}};
            durationDisplay.textContent = formatDurationText(seconds);
        }
        {{/if}}
        
        // Funci√≥n para formatear duraci√≥n
        function formatDurationText(seconds) {
            if (!seconds || isNaN(seconds)) return '0m';
            
            const hours = Math.floor(seconds / 3600);
            const minutes = Math.floor((seconds % 3600) / 60);
            
            if (hours > 0) {
                return `${hours}h ${minutes}m`;
            } else {
                return `${minutes}m`;
            }
        }
        
        // Mostrar notificaci√≥n de atajos
        console.log('üé¨ Reproductor de video inicializado');
        console.log('‚å®Ô∏è Atajos disponibles:');
        console.log('   ‚Ä¢ Espacio: Play/Pausa');
        console.log('   ‚Ä¢ Ctrl+R: Reiniciar video');
        console.log('   ‚Ä¢ Ctrl+F: Pantalla completa');
        console.log('   ‚Ä¢ Escape: Salir de pantalla completa');
        
        // Tooltip para atajos
        setTimeout(() => {
            if (typeof bootstrap !== 'undefined') {
                const tooltips = document.querySelectorAll('[title]');
                tooltips.forEach(el => new bootstrap.Tooltip(el));
            }
        }, 1000);
    </script>
</body>
</html>