<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Certificados - StartEducation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #ea580c;
            --primary-hover: #c2410c;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --info-color: #3b82f6;
            --text-dark: #1f2937;
            --text-muted: #6b7280;
            --border-color: #e5e7eb;
            --bg-light: #f8fafc;
            --gold-color: #f59e0b;
        }

        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            color: var(--text-dark);
        }

        .page-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
            color: white;
            padding: 30px 0;
            margin-bottom: 30px;
        }

        .certificate-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 7px 30px rgba(0,0,0,0.15);
            transition: all 0.3s ease;
            position: relative;
            border: 1px solid var(--border-color);
        }

        .certificate-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 45px rgba(0,0,0,0.25);
        }

        .certificate-header {
            background: linear-gradient(135deg, var(--gold-color) 0%, #d97706 100%);
            padding: 24px;
            text-align: center;
            position: relative;
        }

        .certificate-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><circle cx="10" cy="10" r="1" fill="white" opacity="0.3"/></svg>');
            background-size: 16px 16px;
        }

        .certificate-icon {
            width: 80px;
            height: 80px;
            background: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 12px;
            font-size: 2.4rem;
            color: var(--gold-color);
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            position: relative;
            z-index: 1;
        }

        .certificate-body {
            padding: 24px;
        }

        .course-title {
            font-size: 1.04rem;
            font-weight: 700;
            color: var(--text-dark);
            margin-bottom: 8px;
            text-align: center;
        }

        .certificate-details {
            margin: 16px 0;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid var(--border-color);
            font-size: 0.85rem;
        }

        .detail-item:last-child {
            border-bottom: none;
        }

        .detail-label {
            color: var(--text-muted);
            font-weight: 500;
        }

        .detail-value {
            font-weight: 600;
            color: var(--text-dark);
        }

        .validation-code {
            background: var(--bg-light);
            padding: 12px;
            border-radius: 8px;
            text-align: center;
            font-family: 'Courier New', monospace;
            font-weight: 700;
            font-size: 0.9rem;
            color: var(--primary-color);
            border: 2px dashed var(--border-color);
            margin: 16px 0;
        }

        .certificate-actions {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 8px;
            margin-top: 16px;
        }

        .btn-certificate {
            padding: 10px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.85rem;
            transition: all 0.3s ease;
        }

        .btn-download {
            background: var(--primary-color);
            color: white;
            border: none;
        }

        .btn-download:hover {
            background: var(--primary-hover);
            transform: scale(1.05);
        }

        .btn-share {
            background: var(--info-color);
            color: white;
            border: none;
        }

        .btn-share:hover {
            background: #2563eb;
        }

        .btn-verify {
            background: var(--success-color);
            color: white;
            border: none;
        }

        .btn-verify:hover {
            background: #059669;
        }

        .btn-print {
            background: var(--text-muted);
            color: white;
            border: none;
        }

        .btn-print:hover {
            background: #4b5563;
        }

        .achievement-badge {
            position: absolute;
            top: 12px;
            right: 12px;
            background: var(--success-color);
            color: white;
            padding: 6px 12px;
            border-radius: 40px;
            font-size: 0.75rem;
            font-weight: 700;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
        }

        .empty-state {
            text-align: center;
            padding: 60px 15px;
        }

        .empty-state i {
            font-size: 4.5rem;
            color: var(--border-color);
            margin-bottom: 15px;
        }

        .stats-section {
            background: white;
            border-radius: 12px;
            padding: 24px;
            margin-bottom: 24px;
            box-shadow: 0 3px 15px rgba(0,0,0,0.1);
            border: 1px solid var(--border-color);
        }

        .stat-item {
            text-align: center;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .stat-label {
            color: var(--text-muted);
            font-size: 0.75rem;
        }
        /* Contenedor principal */
        .container {
            max-width: 1100px;
            padding: 0 1.5rem;
        }

        .page-header h1 {
            font-size: 1.8rem;
            margin-bottom: 0.6rem;
        }

        .page-header p {
            font-size: 0.9rem;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                padding: 0 0.8rem;
            }
            
            .page-header {
                padding: 24px 0;
                margin-bottom: 24px;
            }

            .page-header h1 {
                font-size: 1.5rem;
            }

            .stats-section {
                padding: 20px;
                margin-bottom: 20px;
            }

            .stat-number {
                font-size: 1.6rem;
            }

            .certificate-card {
                margin-bottom: 1.2rem;
            }

            .certificate-header {
                padding: 20px;
            }

            .certificate-body {
                padding: 20px;
            }

            .certificate-icon {
                width: 60px;
                height: 60px;
                font-size: 1.8rem;
            }

            .empty-state {
                padding: 48px 12px;
            }

            .empty-state i {
                font-size: 3.6rem;
            }
        }
    </style>
</head>
<body>
    <div class="page-header">
        <div class="container">
            <h1><i class="fas fa-award"></i> Mis Certificados</h1>
            <p class="mb-0">Tus logros y certificaciones</p>
        </div>
    </div>

    <div class="container">
        {{#if certificados.length}}
            <!-- Stats -->
            <div class="stats-section">
                <div class="row">
                    <div class="col-md-4 stat-item">
                        <div class="stat-number">{{certificados.length}}</div>
                        <div class="stat-label">Certificados Obtenidos</div>
                    </div>
                    <div class="col-md-4 stat-item">
                        <div class="stat-number">{{horasTotales}}</div>
                        <div class="stat-label">Horas de Estudio</div>
                    </div>
                    <div class="col-md-4 stat-item">
                        <div class="stat-number">{{cursosCompletados}}%</div>
                        <div class="stat-label">Tasa de Completado</div>
                    </div>
                </div>
            </div>

            <!-- Certificates Grid -->
            <div class="row g-3">
                {{#each certificados}}
                <div class="col-lg-6 col-md-12">
                    <div class="certificate-card">
                        <div class="achievement-badge">
                            <i class="fas fa-medal"></i> Completado
                        </div>
                        
                        <div class="certificate-header">
                            <div class="certificate-icon">
                                <i class="fas fa-trophy"></i>
                            </div>
                            <h3 style="color: white; font-weight: 700; margin: 0;">
                                Certificado de Finalización
                            </h3>
                        </div>

                        <div class="certificate-body">
                            <h4 class="course-title">{{curso_titulo}}</h4>
                            
                            <div class="certificate-details">
                                <div class="detail-item">
                                    <span class="detail-label">
                                        <i class="fas fa-user-graduate"></i> Estudiante
                                    </span>
                                    <span class="detail-value">{{usuario_nombre}}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">
                                        <i class="fas fa-chalkboard-teacher"></i> Instructor
                                    </span>
                                    <span class="detail-value">{{instructor_nombre}}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">
                                        <i class="fas fa-calendar-check"></i> Fecha de emisión
                                    </span>
                                    <span class="detail-value">{{formatDate fecha_emision}}</span>
                                </div>
                                <div class="detail-item">
                                    <span class="detail-label">
                                        <i class="fas fa-clock"></i> Duración
                                    </span>
                                    <span class="detail-value">{{duracion_horas}} horas</span>
                                </div>
                            </div>

                            <div class="validation-code">
                                <small style="display: block; color: #6c757d; margin-bottom: 5px;">
                                    Código de Validación
                                </small>
                                {{codigo_validacion}}
                            </div>

                            <div class="certificate-actions">
                                <button class="btn btn-certificate btn-download" 
                                        onclick="descargarCertificado({{id_certificado}})">
                                    <i class="fas fa-download"></i> Descargar PDF
                                </button>
                                <button class="btn btn-certificate btn-print" 
                                        onclick="imprimirCertificado({{id_certificado}})">
                                    <i class="fas fa-print"></i> Imprimir
                                </button>
                                <button class="btn btn-certificate btn-share" 
                                        onclick="compartirCertificado('{{codigo_validacion}}')">
                                    <i class="fas fa-share-alt"></i> Compartir
                                </button>
                                <button class="btn btn-certificate btn-verify" 
                                        onclick="verificarCertificado('{{codigo_validacion}}')">
                                    <i class="fas fa-check-circle"></i> Verificar
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        {{else}}
            <div class="empty-state">
                <i class="fas fa-certificate"></i>
                <h3>Aún no tienes certificados</h3>
                <p class="text-muted">Completa cursos para obtener certificados oficiales</p>
                <a href="/cursos" class="btn btn-primary btn-lg mt-3">
                    <i class="fas fa-graduation-cap"></i> Explorar Cursos
                </a>
            </div>
        {{/if}}

        <!-- Verificar Certificado -->
        <div class="stats-section mt-3">
            <h5 class="text-center mb-3">
                <i class="fas fa-shield-alt"></i> Verificar Certificado
            </h5>
            <p class="text-center text-muted mb-3" style="font-size: 0.85rem;">
                Ingresa un código de validación para verificar la autenticidad de un certificado
            </p>
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <div class="input-group">
                        <input type="text" class="form-control" id="codigoVerificacion" 
                               placeholder="Ingresa el código de validación" style="font-size: 0.85rem;">
                        <button class="btn btn-primary" onclick="verificarCodigo()" style="font-size: 0.85rem;">
                            <i class="fas fa-search"></i> Verificar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-3">
            <a href="/dashboard" class="btn btn-outline-primary">
                <i class="fas fa-arrow-left"></i> Volver al Dashboard
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function descargarCertificado(idCertificado) {
            window.open(`/certificados/${idCertificado}/descargar`, '_blank');
        }

        function imprimirCertificado(idCertificado) {
            window.open(`/certificados/${idCertificado}/imprimir`, '_blank');
        }

        function compartirCertificado(codigo) {
            const url = `${window.location.origin}/certificados/verificar/${codigo}`;
            
            if (navigator.share) {
                navigator.share({
                    title: 'Mi Certificado - StartEducation',
                    text: `He completado un curso en StartEducation. Verifica mi certificado:`,
                    url: url
                }).catch(err => console.log('Error sharing:', err));
            } else {
                // Fallback: copiar al portapapeles
                navigator.clipboard.writeText(url).then(() => {
                    showSuccessToast('Enlace copiado al portapapeles');
                });
            }
        }

        function verificarCertificado(codigo) {
            window.open(`/certificados/verificar/${codigo}`, '_blank');
        }

        function verificarCodigo() {
            const codigo = document.getElementById('codigoVerificacion').value;
            if (codigo) {
                window.open(`/certificados/verificar/${codigo}`, '_blank');
            } else {
                showWarningToast('Por favor ingresa un código de validación');
            }
        }
    </script>
</body>
</html>