<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - StartEducation</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
    
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #ea580c;
            --primary-hover: #c2410c;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --text-dark: #1f2937;
            --text-muted: #6b7280;
            --border-color: #e5e7eb;
            --bg-light: #f8fafc;
        }

        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            color: var(--text-dark);
            min-height: 100vh;
        }

        .main-container {
            max-width: 1100px;
            margin: 0 auto;
            padding: 1.5rem;
        }

        .header-section {
            background: white;
            border-radius: 12px;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
            border: 1px solid var(--border-color);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .page-title {
            color: var(--primary-color);
            font-weight: 700;
            font-size: 1.8rem;
            margin-bottom: 0.4rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .page-subtitle {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin-bottom: 0;
        }

        .cart-content {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 1.5rem;
        }

        .cart-items-section {
            background: white;
            border-radius: 12px;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
            border: 1px solid var(--border-color);
            overflow: hidden;
        }

        .section-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
            color: white;
            padding: 1.2rem 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .section-title {
            font-weight: 600;
            font-size: 1rem;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.4rem;
        }

        .cart-item {
            padding: 1.2rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
            transition: all 0.2s ease;
        }

        .cart-item:hover {
            background: var(--bg-light);
        }

        .cart-item:last-child {
            border-bottom: none;
        }

        .course-card {
            display: flex;
            gap: 1rem;
            align-items: start;
        }

        .course-thumbnail {
            width: 96px;
            height: 72px;
            border-radius: 8px;
            object-fit: cover;
            background: var(--bg-light);
            border: 2px solid var(--border-color);
            flex-shrink: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            color: var(--text-muted);
            font-size: 1.5rem;
        }

        .course-info {
            flex-grow: 1;
        }

        .course-title {
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.3rem;
            font-size: 0.95rem;
            line-height: 1.4;
        }

        .course-instructor {
            color: var(--text-muted);
            font-size: 0.8rem;
            margin-bottom: 0.4rem;
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }

        .course-meta {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .badge-custom {
            padding: 0.2rem 0.5rem;
            border-radius: 10px;
            font-size: 0.65rem;
            font-weight: 500;
        }

        .badge-nivel {
            background: rgba(59, 130, 246, 0.1);
            color: #1d4ed8;
        }

        .badge-categoria {
            background: rgba(16, 185, 129, 0.1);
            color: #059669;
        }

        .course-actions {
            display: flex;
            flex-direction: column;
            align-items: end;
            gap: 0.5rem;
        }

        .course-price {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .action-buttons {
            display: flex;
            gap: 0.3rem;
        }

        .btn-action {
            padding: 0.3rem 0.5rem;
            border-radius: 5px;
            border: none;
            font-size: 0.75rem;
            transition: all 0.2s ease;
            cursor: pointer;
        }

        .btn-save {
            background: rgba(245, 158, 11, 0.1);
            color: #d97706;
        }

        .btn-save:hover {
            background: rgba(245, 158, 11, 0.2);
        }

        .btn-remove {
            background: rgba(239, 68, 68, 0.1);
            color: #dc2626;
        }

        .btn-remove:hover {
            background: rgba(239, 68, 68, 0.2);
        }

        .summary-card {
            background: white;
            border-radius: 12px;
            box-shadow: 0 3px 15px rgba(0, 0, 0, 0.1);
            border: 1px solid var(--border-color);
            position: sticky;
            top: 1.5rem;
            height: fit-content;
        }

        .summary-header {
            background: var(--bg-light);
            padding: 1.2rem 1.5rem;
            border-bottom: 1px solid var(--border-color);
            border-radius: 12px 12px 0 0;
        }

        .summary-title {
            font-weight: 600;
            font-size: 1rem;
            margin: 0;
            color: var(--text-dark);
            display: flex;
            align-items: center;
            gap: 0.4rem;
        }

        .summary-body {
            padding: 1.5rem;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.6rem 0;
            border-bottom: 1px solid var(--border-color);
            font-size: 0.85rem;
        }

        .summary-row:last-child {
            border-bottom: none;
            padding-top: 1rem;
            font-size: 1rem;
            font-weight: 600;
            color: var(--primary-color);
        }

        .btn-checkout {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
            border: none;
            color: white;
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.9rem;
            width: 100%;
            margin-bottom: 0.8rem;
            transition: all 0.3s ease;
        }

        .btn-checkout:hover {
            background: linear-gradient(135deg, var(--primary-hover) 0%, #9a3412 100%);
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(234, 88, 12, 0.3);
        }

        .btn-continue {
            background: transparent;
            border: 1px solid var(--border-color);
            color: var(--text-muted);
            padding: 0.8rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            font-size: 0.9rem;
            width: 100%;
            transition: all 0.3s ease;
        }

        .btn-continue:hover {
            border-color: var(--primary-color);
            color: var(--primary-color);
            background: rgba(234, 88, 12, 0.05);
        }

        .coupon-section {
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid var(--border-color);
        }

        .coupon-input {
            display: flex;
            gap: 0.5rem;
            margin-top: 0.5rem;
        }

        .form-control {
            border: 1px solid var(--border-color);
            border-radius: 6px;
            padding: 0.5rem 0.75rem;
            font-size: 0.85rem;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.15rem rgba(234, 88, 12, 0.25);
        }

        .btn-coupon {
            background: var(--primary-color);
            border: none;
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            font-size: 0.85rem;
            font-weight: 500;
            white-space: nowrap;
        }

        .btn-coupon:hover {
            background: var(--primary-hover);
        }

        .security-info {
            text-align: center;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid var(--border-color);
        }

        .security-info small {
            color: var(--text-muted);
            font-size: 0.75rem;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.3rem;
        }

        .empty-state {
            text-align: center;
            padding: 3rem 1.5rem;
            color: var(--text-muted);
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 0.8rem;
            opacity: 0.5;
        }

        .empty-state h4 {
            margin-bottom: 0.5rem;
            color: var(--text-dark);
        }

        .empty-state p {
            margin-bottom: 1.5rem;
        }

        @media (max-width: 768px) {
            .main-container {
                padding: 0.8rem;
            }
            
            .cart-content {
                grid-template-columns: 1fr;
                gap: 1rem;
            }
            
            .course-card {
                flex-direction: column;
                gap: 0.8rem;
            }
            
            .course-thumbnail {
                width: 100%;
                height: 120px;
            }
            
            .course-actions {
                flex-direction: row;
                justify-content: space-between;
                align-items: center;
            }
            
            .page-title {
                font-size: 1.5rem;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <div class="header-section">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="page-title">
                        <i class="bi bi-cart3"></i>
                        Mi Carrito de Compras
                    </h1>
                    <p class="page-subtitle">
                        {{#if items}}
                            {{itemCount}} curso{{#gt itemCount 1}}s{{/gt}} seleccionado{{#gt itemCount 1}}s{{/gt}} para comprar
                        {{else}}
                            Tu carrito est谩 vac铆o
                        {{/if}}
                    </p>
                </div>
                <div>
                    <a href="/user-dashboard" class="btn btn-outline-secondary me-2">
                        <i class="bi bi-arrow-left"></i> Volver al Dashboard
                    </a>
                    <a href="/cursos" class="btn btn-outline-primary">
                        <i class="bi bi-plus-circle"></i> Explorar Cursos
                    </a>
                </div>
            </div>
        </div>

        {{#if items}}
        <!-- Cart Content -->
        <div class="cart-content">
            <!-- Cart Items -->
            <div class="cart-items-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="bi bi-list-ul"></i>
                        Cursos Seleccionados
                    </h2>
                    <span class="badge bg-light text-dark">{{itemCount}} curso{{#gt itemCount 1}}s{{/gt}}</span>
                </div>

                {{#each items}}
                <div class="cart-item">
                    <div class="course-card">
                        {{#if miniatura}}
                        <img src="{{miniatura}}" alt="{{titulo}}" class="course-thumbnail">
                        {{else}}
                        <div class="course-thumbnail">
                            <i class="bi bi-play-circle"></i>
                        </div>
                        {{/if}}
                        
                        <div class="course-info">
                            <h3 class="course-title">{{titulo}}</h3>
                            <div class="course-instructor">
                                <i class="bi bi-person-circle"></i>
                                {{instructor_nombre}}
                            </div>
                            <div class="course-meta">
                                {{#if nivel}}
                                <span class="badge-custom badge-nivel">{{nivel}}</span>
                                {{/if}}
                                {{#if categoria_nombre}}
                                <span class="badge-custom badge-categoria">{{categoria_nombre}}</span>
                                {{/if}}
                            </div>
                        </div>
                        
                        <div class="course-actions">
                            <div class="course-price">${{precio}}</div>
                            <div class="action-buttons">
                                <button class="btn-action btn-save" onclick="guardarParaDespues({{id_curso}})" title="Guardar para despu茅s">
                                    <i class="bi bi-bookmark"></i>
                                </button>
                                <button class="btn-action btn-remove" onclick="eliminarDelCarrito({{id_carrito}})" title="Eliminar del carrito">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>

            <!-- Summary Card -->
            <div class="summary-card">
                <div class="summary-header">
                    <h3 class="summary-title">
                        <i class="bi bi-calculator"></i>
                        Resumen de Compra
                    </h3>
                </div>
                
                <div class="summary-body">
                    <div class="summary-row">
                        <span>Subtotal ({{itemCount}} curso{{#gt itemCount 1}}s{{/gt}}):</span>
                        <span>${{subtotal}}</span>
                    </div>
                    
                    {{#if descuento}}
                    <div class="summary-row">
                        <span>Descuento:</span>
                        <span class="text-success">-${{descuento}}</span>
                    </div>
                    {{/if}}
                    
                    {{#if impuestos}}
                    <div class="summary-row">
                        <span>Impuestos:</span>
                        <span>${{impuestos}}</span>
                    </div>
                    {{/if}}
                    
                    <div class="summary-row">
                        <span>Total:</span>
                        <span>${{total}}</span>
                    </div>
                    
                    <button class="btn-checkout" onclick="procederPago()">
                        <i class="bi bi-credit-card"></i>
                        Proceder al Pago
                    </button>
                    
                    <button class="btn-continue" onclick="window.location.href='/cursos'">
                        <i class="bi bi-arrow-left"></i>
                        Seguir Comprando
                    </button>
                    
                    <!-- Coupon Section -->
                    <div class="coupon-section">
                        <label class="form-label">驴Tienes un cup贸n de descuento?</label>
                        <div class="coupon-input">
                            <input type="text" class="form-control" id="codigoCupon" placeholder="C贸digo de cup贸n">
                            <button class="btn-coupon" onclick="aplicarCupon()">Aplicar</button>
                        </div>
                    </div>
                    
                    <!-- Security Info -->
                    <div class="security-info">
                        <small>
                            <i class="bi bi-shield-check"></i>
                            Compra segura con garant铆a de 30 d铆as
                        </small>
                    </div>
                </div>
            </div>
        </div>
        {{else}}
        <!-- Empty Cart -->
        <div class="cart-items-section">
            <div class="empty-state">
                <i class="bi bi-cart-x"></i>
                <h4>Tu carrito est谩 vac铆o</h4>
                <p>Explora nuestros cursos y agrega los que m谩s te interesen para comenzar tu aprendizaje.</p>
                <a href="/cursos" class="btn btn-checkout" style="width: auto; display: inline-flex; align-items: center; gap: 0.5rem;">
                    <i class="bi bi-search"></i>
                    Explorar Cursos
                </a>
            </div>
        </div>
        {{/if}}
    </div>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Funci贸n para eliminar item del carrito
        function eliminarDelCarrito(carritoId) {
            if (confirm('驴Est谩s seguro de que deseas eliminar este curso del carrito?')) {
                fetch(`/carrito/eliminar/${carritoId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showMessage('Curso eliminado del carrito', 'success');
                        setTimeout(() => location.reload(), 1000);
                    } else {
                        showMessage('Error al eliminar el curso: ' + data.message, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showMessage('Error al comunicarse con el servidor', 'error');
                });
            }
        }

        // Funci贸n para guardar para despu茅s
        function guardarParaDespues(idCurso) {
            fetch(`/carrito/${idCurso}/guardar`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showMessage('Curso guardado para despu茅s', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showMessage('Error: ' + data.message, 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showMessage('Error al guardar el curso', 'error');
            });
        }

        // Funci贸n para proceder al pago
        function procederPago() {
            // Aqu铆 se implementar铆a la integraci贸n con pasarelas de pago
            showMessage('Funcionalidad de pago en desarrollo. Pr贸ximamente tendr谩s acceso a diferentes m茅todos de pago.', 'info');
        }

        // Funci贸n para aplicar cup贸n
        function aplicarCupon() {
            const codigo = document.getElementById('codigoCupon').value.trim();
            if (!codigo) {
                showMessage('Por favor ingresa un c贸digo de cup贸n', 'error');
                return;
            }

            fetch('/carrito/aplicar-cupon', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ codigo })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showMessage('Cup贸n aplicado exitosamente', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showMessage('Cup贸n inv谩lido o expirado', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showMessage('Error al aplicar el cup贸n', 'error');
            });
        }

        // Funci贸n para mostrar mensajes
        function showMessage(message, type) {
            const alertClass = type === 'success' ? 'alert-success' : 
                              type === 'error' ? 'alert-danger' : 'alert-info';
            
            const alertHtml = `
                <div class="alert ${alertClass} alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;" role="alert">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            document.body.insertAdjacentHTML('beforeend', alertHtml);
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                const alert = document.querySelector('.alert');
                if (alert) {
                    alert.remove();
                }
            }, 5000);
        }

        // Mostrar mensajes del servidor si existen
        {{#if message}}
        document.addEventListener('DOMContentLoaded', function() {
            showMessage('{{message.text}}', '{{message.type}}');
        });
        {{/if}}

        console.log(' Carrito de compras inicializado');
    </script>
</body>
</html>