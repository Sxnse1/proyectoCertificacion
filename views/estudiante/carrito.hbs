    <script>
        function eliminarDelCarrito(idCurso) {
            if (confirm('¿Eliminar este curso del carrito?')) {
                fetch(`/carrito/${idCurso}/eliminar`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al eliminar el curso');
                });
            }
        }

        function guardarParaDespues(idCurso) {
            fetch(`/carrito/${idCurso}/guardar`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert('Curso guardado para después');
                    location.reload();
                } else {
                    alert('Error: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        }

        function procederAlPago() {
            window.location.href = '/checkout';
        }

        function aplicarCupon() {
            const codigo = document.getElementById('codigoCupon').value;
            if (codigo) {
                fetch('/carrito/aplicar-cupon', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ codigo })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Cupón aplicado exitosamente');
                        location.reload();
                    } else {
                        alert('Cupón inválido o expirado');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            }
        }
    </script>
