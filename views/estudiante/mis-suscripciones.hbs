<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Suscripciones - StartEducation</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary-color: #FF6B35;
            --secondary-color: #004E89;
        }

        body {
            background: #f8f9fa;
            font-family: 'Inter', sans-serif;
        }

        .page-header {
            background: linear-gradient(135deg, var(--primary-color), #F7931E);
            color: white;
            padding: 40px 0;
            margin-bottom: 40px;
        }

        .subscription-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 20px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            transition: all 0.3s ease;
        }

        .subscription-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15);
        }

        .status-badge {
            padding: 8px 16px;
            border-radius: 50px;
            font-weight: 600;
            font-size: 0.9rem;
        }

        .status-activa {
            background: #d4edda;
            color: #155724;
        }

        .status-expirada {
            background: #f8d7da;
            color: #721c24;
        }

        .status-cancelada {
            background: #fff3cd;
            color: #856404;
        }

        .plan-details {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 20px 0;
        }

        .plan-name {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .plan-price {
            font-size: 2rem;
            font-weight: 800;
            color: var(--secondary-color);
        }

        .btn-action {
            margin: 5px;
        }

        .no-subscriptions {
            text-align: center;
            padding: 60px 20px;
        }

        .no-subscriptions i {
            font-size: 5rem;
            color: #dee2e6;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="page-header">
        <div class="container">
            <h1><i class="fas fa-crown"></i> Mis Suscripciones</h1>
            <p class="mb-0">Administra tus planes y membresías</p>
        </div>
    </div>

    <div class="container">
        {{#if suscripciones.length}}
            {{#each suscripciones}}
            <div class="subscription-card">
                <div class="d-flex justify-content-between align-items-start">
                    <div>
                        <span class="status-badge status-{{estatus}}">
                            {{#if (eq estatus 'activa')}}
                                <i class="fas fa-check-circle"></i> Activa
                            {{else if (eq estatus 'expirada')}}
                                <i class="fas fa-times-circle"></i> Expirada
                            {{else}}
                                <i class="fas fa-ban"></i> Cancelada
                            {{/if}}
                        </span>
                    </div>
                    <div>
                        <small class="text-muted">ID: #{{id_suscripcion}}</small>
                    </div>
                </div>

                <div class="plan-details">
                    <div>
                        <div class="plan-name">{{membresia_nombre}}</div>
                        <p class="text-muted mb-0">{{tipo_periodo}}</p>
                    </div>
                    <div class="plan-price">${{precio}}</div>
                </div>

                <div class="row mt-3">
                    <div class="col-md-6">
                        <p class="mb-1">
                            <i class="fas fa-calendar-check text-success"></i>
                            <strong>Fecha de compra:</strong> {{formatDate fecha_compra}}
                        </p>
                    </div>
                    <div class="col-md-6">
                        <p class="mb-1">
                            <i class="fas fa-calendar-times text-danger"></i>
                            <strong>Vencimiento:</strong> {{formatDate fecha_vencimiento}}
                        </p>
                    </div>
                </div>

                {{#if descripcion}}
                <p class="mt-3 mb-0 text-muted">{{descripcion}}</p>
                {{/if}}

                <div class="mt-4 d-flex gap-2">
                    {{#if (eq estatus 'activa')}}
                        <button class="btn btn-outline-danger btn-action" onclick="cancelarSuscripcion({{id_suscripcion}})">
                            <i class="fas fa-times"></i> Cancelar Suscripción
                        </button>
                        <button class="btn btn-outline-primary btn-action" onclick="renovarSuscripcion({{id_suscripcion}})">
                            <i class="fas fa-sync"></i> Renovar
                        </button>
                    {{else if (eq estatus 'expirada')}}
                        <button class="btn btn-primary btn-action" onclick="renovarSuscripcion({{id_suscripcion}})">
                            <i class="fas fa-redo"></i> Reactivar Suscripción
                        </button>
                    {{/if}}
                    <a href="/historial-pagos?suscripcion={{id_suscripcion}}" class="btn btn-outline-secondary btn-action">
                        <i class="fas fa-receipt"></i> Ver Pagos
                    </a>
                </div>
            </div>
            {{/each}}
        {{else}}
            <div class="no-subscriptions">
                <i class="fas fa-inbox"></i>
                <h3>No tienes suscripciones activas</h3>
                <p class="text-muted">Explora nuestros planes de membresía para acceder a todo el contenido</p>
                <a href="/membresias" class="btn btn-primary btn-lg mt-3">
                    <i class="fas fa-crown"></i> Ver Planes Disponibles
                </a>
            </div>
        {{/if}}

        <div class="text-center mt-4">
            <a href="/dashboard" class="btn btn-light btn-lg">
                <i class="fas fa-arrow-left"></i> Volver al Dashboard
            </a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function cancelarSuscripcion(idSuscripcion) {
            if (confirm('¿Estás seguro de que deseas cancelar esta suscripción?')) {
                fetch(`/suscripciones/${idSuscripcion}/cancelar`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        alert('Suscripción cancelada exitosamente');
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error al cancelar la suscripción');
                });
            }
        }

        function renovarSuscripcion(idSuscripcion) {
            if (confirm('¿Deseas renovar esta suscripción?')) {
                window.location.href = `/suscripciones/${idSuscripcion}/renovar`;
            }
        }
    </script>
</body>
</html>