<script>
// Script para manejar el men√∫ m√≥vil
document.addEventListener('DOMContentLoaded', function() {
  const mobileToggle = document.getElementById('mobileMenuToggle');
  const navMenu = document.getElementById('navMenu');
  
  if (mobileToggle && navMenu) {
    mobileToggle.addEventListener('click', function() {
      navMenu.classList.toggle('active');
      
      // Animar el bot√≥n hamburguesa
      const lines = mobileToggle.querySelectorAll('.hamburger-line');
      if (navMenu.classList.contains('active')) {
        lines[0].style.transform = 'rotate(45deg) translate(5px, 6px)';
        lines[1].style.opacity = '0';
        lines[2].style.transform = 'rotate(-45deg) translate(7px, -6px)';
      } else {
        lines[0].style.transform = 'none';
        lines[1].style.opacity = '1';
        lines[2].style.transform = 'none';
      }
    });
    
    // Cerrar men√∫ al hacer click en un enlace
    const menuLinks = navMenu.querySelectorAll('a');
    menuLinks.forEach(link => {
      link.addEventListener('click', function() {
        navMenu.classList.remove('active');
        const lines = mobileToggle.querySelectorAll('.hamburger-line');
        lines[0].style.transform = 'none';
        lines[1].style.opacity = '1';
        lines[2].style.transform = 'none';
      });
    });
    
    // Cerrar men√∫ al hacer click fuera de √©l
    document.addEventListener('click', function(event) {
      if (!mobileToggle.contains(event.target) && !navMenu.contains(event.target)) {
        navMenu.classList.remove('active');
        const lines = mobileToggle.querySelectorAll('.hamburger-line');
        lines[0].style.transform = 'none';
        lines[1].style.opacity = '1';
        lines[2].style.transform = 'none';
      }
    });
  }
  
  // Asegurar que el bot√≥n de login sea visible
  const loginBtn = document.querySelector('.login-btn');
  if (loginBtn) {
    loginBtn.style.display = 'block';
    loginBtn.style.visibility = 'visible';
    loginBtn.style.opacity = '1';
  }
});
</script>