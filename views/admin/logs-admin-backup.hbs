{{!-- 
游댌 LOGS DE AUDITOR칈A - VISTA PRINCIPAL
============================================================
Vista principal para mostrar logs de auditor칤a del sistema
StartEducation con filtros, paginaci칩n y exportaci칩n
============================================================
--}}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/stylesheets/admin-base.css" rel="stylesheet">
    <style>
        .audit-log-card {
            border-left: 4px solid #007bff;
            margin-bottom: 1rem;
        }
        .audit-log-action {
            font-weight: 600;
            color: #495057;
        }
        .audit-log-user {
            color: #6c757d;
            font-size: 0.9rem;
        }
        .audit-log-time {
            color: #6c757d;
            font-size: 0.85rem;
        }
        .audit-log-ip {
            font-family: 'Courier New', monospace;
            font-size: 0.8rem;
            background-color: #f8f9fa;
            padding: 2px 6px;
            border-radius: 3px;
        }
        .filter-section {
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }
        .stats-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
        }
        .entity-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }
        .action-badge {
            font-size: 0.75rem;
            padding: 0.25rem 0.5rem;
        }
        .details-preview {
            max-width: 300px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
            font-family: 'Courier New', monospace;
            font-size: 0.8rem;
            background-color: #f8f9fa;
            padding: 2px 6px;
            border-radius: 3px;
        }
        .log-table th {
            background-color: #343a40;
            color: white;
            border: none;
            font-weight: 600;
            font-size: 0.9rem;
        }
        .log-table td {
            vertical-align: middle;
            border: 1px solid #dee2e6;
        }
        .export-section {
            background-color: #e9ecef;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 2rem;
        }
    </style>
</head>
<body>
    <div class="admin-container">
        {{> admin-sidebar currentUser=currentUser }}
        
        <div class="main-content">
            {{> admin-header currentUser=currentUser }}
            
            <div class="content-area">
                <div class="container-fluid">
                    <!-- Header con T칤tulo y Estad칤sticas -->
                    <div class="row mb-4">
                        <div class="col-md-8">
                            <h1 class="mb-0">
                                <i class="bi bi-shield-check text-primary"></i>
                                Logs de Auditor칤a
                            </h1>
                            <p class="text-muted mt-2">Registro completo de todas las acciones administrativas del sistema</p>
                        </div>
                        <div class="col-md-4">
                            <div class="card stats-card">
                                <div class="card-body text-center">
                                    <h3 class="mb-1">{{formatNumber stats.resumen.TotalLogs}}</h3>
                                    <p class="mb-0">Total de Logs</p>
                                    <small>{{stats.resumen.UsuariosActivos}} usuarios activos</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Secci칩n de Exportaci칩n -->
                    <div class="export-section">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <h6 class="mb-1"><i class="bi bi-download"></i> Exportar Logs</h6>
                                <small class="text-muted">Descarga los logs en formato CSV o JSON</small>
                            </div>
                            <div class="col-md-4 text-end">
                                <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#exportModal">
                                    <i class="bi bi-download"></i> Exportar
                                </button>
                            </div>
                        </div>
                    </div>

                    <!-- Filtros -->
                    <div class="filter-section">
                        <form method="GET" action="/admin/logs" class="row g-3">
                            <div class="col-md-3">
                                <label class="form-label">Usuario</label>
                                <input type="text" name="user" class="form-control" placeholder="Buscar por nombre o email" value="{{filters.user}}">
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Entidad</label>
                                <select name="entidad" class="form-select">
                                    <option value="">Todas</option>
                                    {{#each filters.uniqueEntities}}
                                    <option value="{{this}}" {{#if (eq this ../filters.entidad)}}selected{{/if}}>{{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-3">
                                <label class="form-label">Acci칩n</label>
                                <select name="accion" class="form-select">
                                    <option value="">Todas</option>
                                    {{#each filters.uniqueActions}}
                                    <option value="{{this}}" {{#if (eq this ../filters.accion)}}selected{{/if}}>{{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-2">
                                <label class="form-label">Fecha</label>
                                <input type="date" name="fecha" class="form-control" value="{{filters.fecha}}">
                            </div>
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="bi bi-search"></i> Filtrar
                                </button>
                                <a href="/admin/logs" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i>
                                </a>
                            </div>
                        </form>
                    </div>

                    <!-- Tabla de Logs -->
                    <div class="card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-list-ul"></i>
                                Logs de Auditor칤a
                                <span class="badge bg-primary ms-2">{{pagination.totalItems}}</span>
                            </h5>
                            <div class="text-muted">
                                P치gina {{pagination.currentPage}} de {{pagination.totalPages}}
                            </div>
                        </div>
                        <div class="card-body p-0">
                            {{#if logs}}
                            <div class="table-responsive">
                                <table class="table log-table mb-0">
                                    <thead>
                                        <tr>
                                            <th style="width: 80px;">ID</th>
                                            <th style="width: 150px;">Usuario</th>
                                            <th style="width: 120px;">Acci칩n</th>
                                            <th style="width: 100px;">Entidad</th>
                                            <th style="width: 80px;">ID Entidad</th>
                                            <th style="width: 200px;">Detalles</th>
                                            <th style="width: 120px;">IP</th>
                                            <th style="width: 140px;">Fecha/Hora</th>
                                            <th style="width: 80px;">Ver</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each logs}}
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">#{{LogID}}</span>
                                            </td>
                                            <td>
                                                <div class="audit-log-user">
                                                    <strong>{{UsuarioNombre}}</strong><br>
                                                    <small>{{UsuarioEmail}}</small>
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge action-badge 
                                                    {{#if (includes Accion 'CREADO')}}bg-success
                                                    {{else if (includes Accion 'ELIMINADO')}}bg-danger
                                                    {{else if (includes Accion 'ACTUALIZADO')}}bg-warning
                                                    {{else}}bg-info{{/if}}">
                                                    {{Accion}}
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge entity-badge bg-primary">{{Entidad}}</span>
                                            </td>
                                            <td>
                                                {{#if EntidadID}}
                                                <span class="badge bg-light text-dark">#{{EntidadID}}</span>
                                                {{else}}
                                                <span class="text-muted">-</span>
                                                {{/if}}
                                            </td>
                                            <td>
                                                {{#if Detalles}}
                                                <div class="details-preview" title="{{Detalles}}">
                                                    {{truncate Detalles 50}}
                                                </div>
                                                {{else}}
                                                <span class="text-muted">Sin detalles</span>
                                                {{/if}}
                                            </td>
                                            <td>
                                                {{#if IP}}
                                                <span class="audit-log-ip">{{IP}}</span>
                                                {{else}}
                                                <span class="text-muted">N/A</span>
                                                {{/if}}
                                            </td>
                                            <td>
                                                <div class="audit-log-time">
                                                    {{formatDate Timestamp}}<br>
                                                    <small>{{formatTime Timestamp}}</small>
                                                </div>
                                            </td>
                                            <td>
                                                <a href="/admin/logs/{{LogID}}" class="btn btn-sm btn-outline-primary" title="Ver detalles">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                            {{else}}
                            <div class="text-center py-5">
                                <i class="bi bi-inbox display-1 text-muted"></i>
                                <h4 class="text-muted mt-3">No hay logs de auditor칤a</h4>
                                <p class="text-muted">No se encontraron logs que coincidan con los filtros aplicados.</p>
                            </div>
                            {{/if}}
                        </div>
                    </div>

                    <!-- Paginaci칩n -->
                    {{#if logs}}
                    <nav aria-label="Paginaci칩n de logs" class="mt-4">
                        <ul class="pagination justify-content-center">
                            {{#if pagination.hasPrevPage}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{pagination.prevPage}}&user={{filters.user}}&entidad={{filters.entidad}}&accion={{filters.accion}}&fecha={{filters.fecha}}">
                                    <i class="bi bi-chevron-left"></i> Anterior
                                </a>
                            </li>
                            {{/if}}
                            
                            <li class="page-item active">
                                <span class="page-link">{{pagination.currentPage}} de {{pagination.totalPages}}</span>
                            </li>
                            
                            {{#if pagination.hasNextPage}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{pagination.nextPage}}&user={{filters.user}}&entidad={{filters.entidad}}&accion={{filters.accion}}&fecha={{filters.fecha}}">
                                    Siguiente <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                            {{/if}}
                        </ul>
                    </nav>
                    {{/if}}

                    <!-- Estad칤sticas Adicionales -->
                    <div class="row mt-5">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="bi bi-person-check"></i> Usuarios M치s Activos</h6>
                                </div>
                                <div class="card-body">
                                    {{#if stats.usuariosMasActivos}}
                                    {{#each stats.usuariosMasActivos}}
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <strong>{{Usuario}}</strong><br>
                                            <small class="text-muted">{{Email}}</small>
                                        </div>
                                        <span class="badge bg-primary">{{AccionesRealizadas}} acciones</span>
                                    </div>
                                    {{/each}}
                                    {{else}}
                                    <p class="text-muted mb-0">No hay datos disponibles</p>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header">
                                    <h6 class="mb-0"><i class="bi bi-bar-chart"></i> Acciones M치s Comunes</h6>
                                </div>
                                <div class="card-body">
                                    {{#if stats.accionesMasComunes}}
                                    {{#each stats.accionesMasComunes}}
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="badge action-badge bg-info">{{Accion}}</span>
                                        <span class="badge bg-secondary">{{Frecuencia}} veces</span>
                                    </div>
                                    {{/each}}
                                    {{else}}
                                    <p class="text-muted mb-0">No hay datos disponibles</p>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Exportaci칩n -->
    <div class="modal fade" id="exportModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-download"></i> Exportar Logs de Auditor칤a
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form action="/admin/logs/export" method="POST">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Formato de Exportaci칩n</label>
                            <select name="formato" class="form-select" required>
                                <option value="csv">CSV (Excel)</option>
                                <option value="json">JSON</option>
                            </select>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label class="form-label">Fecha Inicio</label>
                                <input type="date" name="fechaInicio" class="form-control">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Fecha Fin</label>
                                <input type="date" name="fechaFin" class="form-control">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-6">
                                <label class="form-label">Filtrar por Entidad</label>
                                <select name="entidad" class="form-select">
                                    <option value="">Todas las entidades</option>
                                    {{#each filters.uniqueEntities}}
                                    <option value="{{this}}">{{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Filtrar por Acci칩n</label>
                                <select name="accion" class="form-select">
                                    <option value="">Todas las acciones</option>
                                    {{#each filters.uniqueActions}}
                                    <option value="{{this}}">{{this}}</option>
                                    {{/each}}
                                </select>
                            </div>
                        </div>
                        <div class="alert alert-info mt-3">
                            <i class="bi bi-info-circle"></i>
                            <strong>Nota:</strong> La exportaci칩n incluir치 un m치ximo de 10,000 registros. Para exportaciones m치s grandes, contacte al administrador del sistema.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-download"></i> Exportar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-refrescar cada 30 segundos si no hay filtros aplicados
        {{#unless (or filters.user filters.entidad filters.accion filters.fecha)}}
        setTimeout(() => {
            if (!document.hidden) {
                window.location.reload();
            }
        }, 30000);
        {{/unless}}

        // Tooltip para IPs y detalles truncados
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
        const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl);
        });
    </script>
</body>
</html>