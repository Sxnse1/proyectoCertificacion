<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Suscripciones - StartEducation</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
    
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #ea580c;
            --primary-hover: #c2410c;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --info-color: #3b82f6;
            --text-dark: #1f2937;
            --text-muted: #6b7280;
            --border-color: #e5e7eb;
            --bg-light: #f8fafc;
        }

        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            color: var(--text-dark);
            min-height: 100vh;
        }

        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .header-section {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-bottom: 2rem;
            border-left: 5px solid var(--primary-color);
        }

        .header-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .header-title h1 {
            color: var(--text-dark);
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-top: 1.5rem;
        }

        .stat-card {
            background: var(--bg-light);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            border: 1px solid var(--border-color);
            transition: transform 0.2s ease;
        }

        .stat-card:hover {
            transform: translateY(-2px);
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
            display: block;
        }

        .stat-label {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }

        .controls-section {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .controls-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .search-group {
            display: flex;
            gap: 0.5rem;
            flex: 1;
            max-width: 400px;
        }

        .search-input {
            border: 2px solid var(--border-color);
            border-radius: 8px;
            padding: 0.75rem 1rem;
            font-size: 0.95rem;
            transition: border-color 0.3s ease;
        }

        .search-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(234, 88, 12, 0.25);
        }

        .filter-select {
            border: 2px solid var(--border-color);
            border-radius: 8px;
            padding: 0.75rem 1rem;
            transition: border-color 0.3s ease;
        }

        .filter-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(234, 88, 12, 0.25);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
            border: none;
            border-radius: 8px;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary-hover) 0%, #9a3412 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(234, 88, 12, 0.4);
        }

        .btn-success {
            background: var(--success-color);
            border: none;
            border-radius: 8px;
            font-weight: 600;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }

        .btn-success:hover {
            background: #059669;
            transform: translateY(-2px);
        }

        .btn-warning {
            background: var(--warning-color);
            border: none;
            border-radius: 8px;
            color: white;
            font-weight: 600;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }

        .btn-warning:hover {
            background: #d97706;
            color: white;
        }

        .btn-danger {
            background: var(--danger-color);
            border: none;
            border-radius: 8px;
            font-weight: 600;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }

        .btn-danger:hover {
            background: #dc2626;
        }

        .table-section {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .table {
            margin: 0;
        }

        .table th {
            background: var(--bg-light);
            border: none;
            font-weight: 600;
            color: var(--text-dark);
            padding: 1rem;
        }

        .table td {
            border: none;
            padding: 1rem;
            vertical-align: middle;
        }

        .table tbody tr {
            border-bottom: 1px solid #f1f5f9;
            transition: background-color 0.2s ease;
        }

        .table tbody tr:hover {
            background-color: rgba(234, 88, 12, 0.05);
        }

        .badge {
            padding: 0.35rem 0.75rem;
            border-radius: 20px;
            font-weight: 500;
            font-size: 0.85rem;
        }

        .badge-activa {
            background: var(--success-color);
            color: white;
        }

        .badge-cancelada {
            background: var(--text-muted);
            color: white;
        }

        .badge-expirada {
            background: var(--danger-color);
            color: white;
        }

        .badge-pausada {
            background: var(--warning-color);
            color: white;
        }

        .badge-proxima_expirar {
            background: var(--warning-color);
            color: white;
        }

        .user-info {
            max-width: 200px;
        }

        .date-info {
            font-size: 0.9rem;
        }

        .duration-info {
            text-align: center;
            min-width: 120px;
        }

        .progress {
            margin-top: 0.25rem !important;
        }

        .progress-bar {
            background: var(--primary-color);
        }

        .actions-group {
            display: flex;
            gap: 0.5rem;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-muted);
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        @media (max-width: 768px) {
            .main-container {
                padding: 1rem;
            }
            
            .header-section {
                padding: 1.5rem;
            }
            
            .controls-row {
                flex-direction: column;
                align-items: stretch;
            }
            
            .search-group {
                max-width: none;
            }
            
            .actions-group {
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <div class="header-section">
            <div class="header-title">
                <h1>
                    <i class="bi bi-people"></i>
                    Gestión de Suscripciones
                </h1>
                <a href="/dashboard" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al Dashboard
                </a>
            </div>

            <!-- Statistics -->
            <div class="stats-row">
                <div class="stat-card">
                    <span class="stat-number">{{totalSuscripciones}}</span>
                    <div class="stat-label">Total Suscripciones</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{suscripcionesActivas}}</span>
                    <div class="stat-label">Activas</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{suscripcionesCanceladas}}</span>
                    <div class="stat-label">Canceladas</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{suscripcionesExpiradas}}</span>
                    <div class="stat-label">Expiradas</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{suscripcionesPausadas}}</span>
                    <div class="stat-label">Pausadas</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{proximasExpirar}}</span>
                    <div class="stat-label">Próximas a Expirar</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{usuariosActivos}}</span>
                    <div class="stat-label">Usuarios Activos</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">${{ingresosMensuales}}</span>
                    <div class="stat-label">Ingresos Activos</div>
                </div>
            </div>
        </div>

        <!-- Controls Section -->
        <div class="controls-section">
            <div class="controls-row">
                <div class="search-group">
                    <input type="text" class="form-control search-input" id="searchInput" 
                           placeholder="Buscar por usuario o membresía...">
                    <button class="btn btn-primary" onclick="buscar()">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
                <div class="d-flex gap-2">
                    <select class="form-select filter-select" id="filterEstatus" onchange="filtrar()">
                        <option value="">Todos los estatus</option>
                        <option value="activa">Activas</option>
                        <option value="cancelada">Canceladas</option>
                        <option value="expirada">Expiradas</option>
                        <option value="pausada">Pausadas</option>
                        <option value="proxima_expirar">Próximas a Expirar</option>
                    </select>
                    <select class="form-select filter-select" id="filterMembresia" onchange="filtrar()">
                        <option value="">Todas las membresías</option>
                        {{#each membresias}}
                        <option value="{{id_membresia}}">{{nombre_membresia}}</option>
                        {{/each}}
                    </select>
                </div>
            </div>
        </div>

        <!-- Table Section -->
        <div class="table-section">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Información del Usuario</th>
                            <th>Membresía</th>
                            <th>Precio</th>
                            <th>Fechas</th>
                            <th>Estatus</th>
                            <th>Duración</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if suscripciones}}
                            {{#each suscripciones}}
                            <tr>
                                <td><strong>#{{id_suscripcion}}</strong></td>
                                <td>
                                    <div class="user-info">
                                        <strong>{{nombre_usuario}}</strong><br>
                                        <small class="text-muted">
                                            <i class="bi bi-envelope"></i> {{email_usuario}}
                                        </small><br>
                                        <small class="text-muted">
                                            <i class="bi bi-person-plus"></i> Registrado: {{formatDate fecha_registro_usuario}}
                                        </small>
                                    </div>
                                </td>
                                <td>
                                    <strong>{{nombre_membresia}}</strong><br>
                                    <small class="text-muted">{{descripcion_membresia}}</small>
                                </td>
                                <td>
                                    <span class="text-primary fw-bold">${{precio}}</span><br>
                                    <small class="text-muted">{{duracion_dias}} días</small>
                                </td>
                                <td>
                                    <div class="date-info">
                                        <strong>Compra:</strong><br>
                                        <small>{{formatDate fecha_compra}}</small><br>
                                        <strong>Vencimiento:</strong><br>
                                        <small>{{formatDate fecha_vencimiento}}</small>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-{{estatus_real}}">
                                        {{estatus_display}}
                                    </span>
                                    {{#if dias_restantes}}
                                    <br><small class="text-muted">{{dias_restantes}} días</small>
                                    {{/if}}
                                </td>
                                <td>
                                    <div class="duration-info">
                                        <strong>{{dias_transcurridos}}</strong> / {{duracion_dias}}<br>
                                        <small class="text-muted">días transcurridos</small>
                                        <div class="progress mt-1" style="height: 4px;">
                                            <div class="progress-bar" role="progressbar" 
                                                 style="width: {{porcentaje_transcurrido}}%"></div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="actions-group">
                                        {{#if (eq estatus_real "activa")}}
                                        <button class="btn btn-sm btn-warning" 
                                                onclick="pausarSuscripcion({{id_suscripcion}})"
                                                title="Pausar">
                                            <i class="bi bi-pause-circle"></i>
                                        </button>
                                        {{else if (eq estatus_real "pausada")}}
                                        <button class="btn btn-sm btn-success" 
                                                onclick="reanudarSuscripcion({{id_suscripcion}})"
                                                title="Reanudar">
                                            <i class="bi bi-play-circle"></i>
                                        </button>
                                        {{/if}}
                                        
                                        <button class="btn btn-sm btn-success" 
                                                onclick="renovarSuscripcion({{id_suscripcion}})"
                                                title="Renovar">
                                            <i class="bi bi-arrow-clockwise"></i>
                                        </button>
                                        <button class="btn btn-sm btn-info" 
                                                onclick="extenderVencimiento({{id_suscripcion}})"
                                                title="Extender Vencimiento">
                                            <i class="bi bi-calendar-plus"></i>
                                        </button>
                                        
                                        {{#unless (eq estatus_real "cancelada")}}
                                        <button class="btn btn-sm btn-danger" 
                                                onclick="cancelarSuscripcion({{id_suscripcion}})"
                                                title="Cancelar">
                                            <i class="bi bi-x-circle"></i>
                                        </button>
                                        {{/unless}}
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        {{else}}
                            <tr>
                                <td colspan="8">
                                    <div class="empty-state">
                                        <i class="bi bi-inbox"></i>
                                        <p>No hay suscripciones registradas</p>
                                    </div>
                                </td>
                            </tr>
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function buscar() {
            const searchTerm = document.getElementById('searchInput').value;
            const estatus = document.getElementById('filterEstatus').value;
            window.location.href = `/admin/suscripciones?search=${searchTerm}&estatus=${estatus}`;
        }

        function filtrar() {
            buscar();
        }

        function renovarSuscripcion(id) {
            if (confirm('¿Deseas renovar esta suscripción?')) {
                fetch(`/admin/suscripciones/${id}/renovar`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showSuccessToast('Suscripción renovada exitosamente');
                        location.reload();
                    } else {
                        showErrorToast('Error: ' + data.message);
                    }
                });
            }
        }

        function modificarVencimiento(id) {
            const nuevaFecha = prompt('Ingresa la nueva fecha de vencimiento (YYYY-MM-DD):');
            if (nuevaFecha) {
                fetch(`/admin/suscripciones/${id}/vencimiento`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ fecha_vencimiento: nuevaFecha })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showSuccessToast('Fecha actualizada exitosamente');
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                });
            }
        }

        function pausarSuscripcion(id) {
            if (confirm('¿Deseas pausar esta suscripción?')) {
                fetch(`/admin/suscripciones/${id}/pausar`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showSuccessToast('Suscripción pausada exitosamente');
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                });
            }
        }

        function reanudarSuscripcion(id) {
            if (confirm('¿Deseas reanudar esta suscripción?')) {
                fetch(`/admin/suscripciones/${id}/reanudar`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showSuccessToast('Suscripción reanudada exitosamente');
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                });
            }
        }

        function extenderVencimiento(id) {
            const dias = prompt('¿Cuántos días deseas extender la suscripción?');
            if (dias && !isNaN(dias)) {
                fetch(`/admin/suscripciones/${id}/extender`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ dias: parseInt(dias) })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showSuccessToast(`Suscripción extendida ${dias} días exitosamente`);
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                });
            }
        }

        function cancelarSuscripcion(id) {
            if (confirm('¿Estás seguro de cancelar esta suscripción?')) {
                fetch(`/admin/suscripciones/${id}/cancelar`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showSuccessToast('Suscripción cancelada exitosamente');
                        location.reload();
                    } else {
                        alert('Error: ' + data.message);
                    }
                });
            }
        }
    </script>
</body>
</html>
