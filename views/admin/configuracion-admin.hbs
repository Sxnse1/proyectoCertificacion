<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Configuración del Sistema - StartEducation</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
    
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #ea580c;
            --primary-hover: #c2410c;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --text-dark: #1f2937;
            --text-muted: #6b7280;
            --border-color: #e5e7eb;
            --bg-light: #f8fafc;
        }

        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            color: var(--text-dark);
            min-height: 100vh;
        }

        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .header-section {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-bottom: 2rem;
            border-left: 5px solid var(--primary-color);
        }

        .header-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .header-title h1 {
            color: var(--text-dark);
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-top: 1.5rem;
        }

        .stat-card {
            background: var(--bg-light);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            border: 1px solid var(--border-color);
            transition: transform 0.2s ease;
        }

        .stat-card:hover {
            transform: translateY(-2px);
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
            display: block;
        }

        .stat-label {
            color: var(--text-muted);
            font-size: 0.875rem;
            font-weight: 500;
            margin-top: 0.5rem;
        }

        .config-section {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
            overflow: hidden;
        }

        .config-header {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
            color: white;
            padding: 1.5rem;
            border: none;
        }

        .config-body {
            padding: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-label {
            font-weight: 600;
            color: var(--text-dark);
            margin-bottom: 0.5rem;
        }

        .form-control, .form-select {
            border: 2px solid var(--border-color);
            border-radius: 8px;
            padding: 0.75rem;
            transition: all 0.2s ease;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(234, 88, 12, 0.25);
        }

        .btn-primary {
            background: var(--primary-color);
            border-color: var(--primary-color);
            font-weight: 500;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
        }

        .btn-primary:hover {
            background: var(--primary-hover);
            border-color: var(--primary-hover);
        }

        .btn-success {
            background: var(--success-color);
            border-color: var(--success-color);
        }

        .btn-warning {
            background: var(--warning-color);
            border-color: var(--warning-color);
            color: white;
        }

        .btn-danger {
            background: var(--danger-color);
            border-color: var(--danger-color);
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            color: var(--text-muted);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }

        .back-button:hover {
            color: var(--primary-color);
        }

        .alert {
            border-radius: 12px;
            border: none;
            padding: 1rem 1.5rem;
        }

        .switch {
            position: relative;
            display: inline-block;
            width: 60px;
            height: 34px;
        }

        .switch input {
            opacity: 0;
            width: 0;
            height: 0;
        }

        .slider {
            position: absolute;
            cursor: pointer;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: #ccc;
            transition: .4s;
            border-radius: 34px;
        }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            transition: .4s;
            border-radius: 50%;
        }

        input:checked + .slider {
            background-color: var(--primary-color);
        }

        input:checked + .slider:before {
            transform: translateX(26px);
        }

        .log-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            border-bottom: 1px solid var(--border-color);
        }

        .log-item:last-child {
            border-bottom: none;
        }

        .log-level {
            padding: 0.25rem 0.75rem;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: 600;
            min-width: 80px;
            text-align: center;
        }

        .log-level.INFO {
            background: #e0f2fe;
            color: #0277bd;
        }

        .log-level.WARNING {
            background: #fff3e0;
            color: #f57c00;
        }

        .log-level.ERROR {
            background: #ffebee;
            color: #d32f2f;
        }

        .server-info {
            background: var(--bg-light);
            border-radius: 12px;
            padding: 1.5rem;
            margin-top: 1rem;
        }

        .color-picker {
            width: 60px;
            height: 40px;
            border: 2px solid var(--border-color);
            border-radius: 8px;
            cursor: pointer;
        }

        @media (max-width: 768px) {
            .main-container {
                padding: 1rem;
            }
            
            .header-title {
                flex-direction: column;
                align-items: flex-start;
            }
            
            .stats-row {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <div class="header-section">
            <div class="header-title">
                <div>
                    <a href="/dashboard" class="back-button">
                        <i class="bi bi-arrow-left"></i>
                        Volver al Dashboard
                    </a>
                    <h1>
                        <i class="bi bi-gear-fill"></i>
                        Configuración del Sistema
                    </h1>
                </div>
            </div>
            
            <!-- Statistics Cards -->
            <div class="stats-row">
                <div class="stat-card">
                    <span class="stat-number">{{totalUsuarios}}</span>
                    <div class="stat-label">Total Usuarios</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{totalCursos}}</span>
                    <div class="stat-label">Total Cursos</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{totalCategorias}}</span>
                    <div class="stat-label">Categorías</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">${{ingresoTotal}}</span>
                    <div class="stat-label">Ingresos Totales</div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Configuración General -->
            <div class="col-lg-6 mb-4">
                <div class="config-section">
                    <div class="config-header">
                        <h5 class="mb-0">
                            <i class="bi bi-building me-2"></i>
                            Configuración General
                        </h5>
                    </div>
                    <div class="config-body">
                        <form id="configGeneralForm">
                            <div class="form-group">
                                <label class="form-label">Nombre de la Plataforma</label>
                                <input type="text" class="form-control" name="nombrePlatforma" 
                                       value="{{configuraciones.nombrePlatforma}}">
                            </div>
                            
                            <div class="form-group">
                                <label class="form-label">Email de Contacto</label>
                                <input type="email" class="form-control" name="emailContacto" 
                                       value="{{configuraciones.emailContacto}}">
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Moneda Principal</label>
                                        <select class="form-select" name="monedaPrincipal">
                                            <option value="USD" {{#eq configuraciones.monedaPrincipal 'USD'}}selected{{/eq}}>USD ($)</option>
                                            <option value="EUR" {{#eq configuraciones.monedaPrincipal 'EUR'}}selected{{/eq}}>EUR (€)</option>
                                            <option value="MXN" {{#eq configuraciones.monedaPrincipal 'MXN'}}selected{{/eq}}>MXN ($)</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Idioma Principal</label>
                                        <select class="form-select" name="idiomaPrincipal">
                                            <option value="es" {{#eq configuraciones.idiomaPrincipal 'es'}}selected{{/eq}}>Español</option>
                                            <option value="en" {{#eq configuraciones.idiomaPrincipal 'en'}}selected{{/eq}}>English</option>
                                            <option value="fr" {{#eq configuraciones.idiomaPrincipal 'fr'}}selected{{/eq}}>Français</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Color Primario</label>
                                        <input type="color" class="form-control color-picker" name="colorPrimario" 
                                               value="{{configuraciones.colorPrimario}}">
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Color Secundario</label>
                                        <input type="color" class="form-control color-picker" name="colorSecundario" 
                                               value="{{configuraciones.colorSecundario}}">
                                    </div>
                                </div>
                            </div>
                            
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>
                                Guardar Cambios
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Configuración del Sistema -->
            <div class="col-lg-6 mb-4">
                <div class="config-section">
                    <div class="config-header">
                        <h5 class="mb-0">
                            <i class="bi bi-cpu me-2"></i>
                            Configuración del Sistema
                        </h5>
                    </div>
                    <div class="config-body">
                        <form id="configSistemaForm">
                            <div class="form-group d-flex justify-content-between align-items-center">
                                <div>
                                    <label class="form-label mb-0">Modo Mantenimiento</label>
                                    <div class="small text-muted">Desactiva el acceso público al sitio</div>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" name="mantenimientoActivo" 
                                           {{#if configuraciones.mantenimientoActivo}}checked{{/if}}>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            
                            <div class="form-group d-flex justify-content-between align-items-center">
                                <div>
                                    <label class="form-label mb-0">Registro Público</label>
                                    <div class="small text-muted">Permite que cualquiera se registre</div>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" name="registroPublico" 
                                           {{#if configuraciones.registroPublico}}checked{{/if}}>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            
                            <div class="form-group d-flex justify-content-between align-items-center">
                                <div>
                                    <label class="form-label mb-0">Aprobar Cursos</label>
                                    <div class="small text-muted">Los cursos requieren aprobación del admin</div>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" name="aprobarCursos" 
                                           {{#if configuraciones.aprobarCursos}}checked{{/if}}>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            
                            <div class="form-group d-flex justify-content-between align-items-center">
                                <div>
                                    <label class="form-label mb-0">Notificaciones por Email</label>
                                    <div class="small text-muted">Enviar emails automáticos del sistema</div>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" name="emailNotificaciones" 
                                           {{#if configuraciones.emailNotificaciones}}checked{{/if}}>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            
                            <div class="form-group d-flex justify-content-between align-items-center">
                                <div>
                                    <label class="form-label mb-0">Backup Automático</label>
                                    <div class="small text-muted">Respaldo diario de la base de datos</div>
                                </div>
                                <label class="switch">
                                    <input type="checkbox" name="backupAutomatico" 
                                           {{#if configuraciones.backupAutomatico}}checked{{/if}}>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>
                                Guardar Configuración
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Configuración de Pagos -->
            <div class="col-lg-6 mb-4">
                <div class="config-section">
                    <div class="config-header">
                        <h5 class="mb-0">
                            <i class="bi bi-credit-card me-2"></i>
                            Configuración de Pagos
                        </h5>
                    </div>
                    <div class="config-body">
                        <form id="configPagosForm">
                            <div class="form-group">
                                <label class="form-label">Comisión de la Plataforma (%)</label>
                                <div class="input-group">
                                    <input type="number" class="form-control" name="comisionPlataforma" 
                                           value="{{configuraciones.comisionPlataforma}}" min="0" max="100" step="0.1">
                                    <span class="input-group-text">%</span>
                                </div>
                                <div class="form-text">Porcentaje que se queda la plataforma de cada venta</div>
                            </div>
                            
                            <div class="alert alert-info">
                                <i class="bi bi-info-circle me-2"></i>
                                <strong>Configuración actual:</strong> La plataforma retiene {{configuraciones.comisionPlataforma}}% de cada venta.
                            </div>
                            
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check-lg me-1"></i>
                                Actualizar Comisión
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Herramientas de Administración -->
            <div class="col-lg-6 mb-4">
                <div class="config-section">
                    <div class="config-header">
                        <h5 class="mb-0">
                            <i class="bi bi-tools me-2"></i>
                            Herramientas de Administración
                        </h5>
                    </div>
                    <div class="config-body">
                        <div class="d-grid gap-3">
                            <button class="btn btn-warning" onclick="ejecutarBackup()">
                                <i class="bi bi-download me-2"></i>
                                Ejecutar Backup Manual
                            </button>
                            
                            <button class="btn btn-info" onclick="limpiarCache()">
                                <i class="bi bi-arrow-clockwise me-2"></i>
                                Limpiar Cache del Sistema
                            </button>
                            
                            <button class="btn btn-success" onclick="optimizarBD()">
                                <i class="bi bi-speedometer2 me-2"></i>
                                Optimizar Base de Datos
                            </button>
                            
                            <a href="/admin/configuracion/logs/descargar" class="btn btn-outline-primary">
                                <i class="bi bi-file-earmark-text me-2"></i>
                                Descargar Logs del Sistema
                            </a>
                        </div>
                        
                        <!-- Información del Servidor -->
                        <div class="server-info">
                            <h6 class="fw-bold">Información del Servidor</h6>
                            <div class="small">
                                <div><strong>Base de Datos:</strong> {{serverInfo.nombre_bd}}</div>
                                <div><strong>Tablas:</strong> {{serverInfo.total_tablas}}</div>
                                <div><strong>Versión SQL:</strong> SQL Server 2019</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Logs del Sistema -->
        <div class="config-section">
            <div class="config-header">
                <h5 class="mb-0">
                    <i class="bi bi-journal-text me-2"></i>
                    Logs Recientes del Sistema
                </h5>
            </div>
            <div class="config-body">
                <div style="max-height: 400px; overflow-y: auto;">
                    {{#each logsRecientes}}
                    <div class="log-item">
                        <span class="log-level {{nivel}}">{{nivel}}</span>
                        <div class="flex-grow-1">
                            <div>{{mensaje}}</div>
                            <div class="small text-muted">{{usuario}} - {{fecha}}</div>
                        </div>
                    </div>
                    {{/each}}
                </div>
                
                <div class="mt-3 text-center">
                    <button class="btn btn-outline-primary btn-sm" onclick="cargarMasLogs()">
                        <i class="bi bi-arrow-down me-1"></i>
                        Cargar más logs
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Configuración General
        document.getElementById('configGeneralForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            fetch('/admin/configuracion/general', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    mostrarAlerta('success', data.message);
                } else {
                    mostrarAlerta('danger', data.error || 'Error al guardar configuración');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                mostrarAlerta('danger', 'Error de conexión');
            });
        });

        // Configuración del Sistema
        document.getElementById('configSistemaForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = {};
            
            // Convertir checkboxes a boolean
            data.mantenimientoActivo = formData.has('mantenimientoActivo');
            data.registroPublico = formData.has('registroPublico');
            data.aprobarCursos = formData.has('aprobarCursos');
            data.emailNotificaciones = formData.has('emailNotificaciones');
            data.backupAutomatico = formData.has('backupAutomatico');
            
            fetch('/admin/configuracion/sistema', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    mostrarAlerta('success', data.message);
                } else {
                    mostrarAlerta('danger', data.error || 'Error al guardar configuración');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                mostrarAlerta('danger', 'Error de conexión');
            });
        });

        // Configuración de Pagos
        document.getElementById('configPagosForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            fetch('/admin/configuracion/pagos', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(data)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    mostrarAlerta('success', data.message);
                } else {
                    mostrarAlerta('danger', data.error || 'Error al guardar configuración');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                mostrarAlerta('danger', 'Error de conexión');
            });
        });

        // Herramientas de administración
        function ejecutarBackup() {
            if (confirm('¿Está seguro de que desea ejecutar un backup manual?')) {
                fetch('/admin/configuracion/backup', {
                    method: 'POST'
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        mostrarAlerta('success', data.message);
                    } else {
                        mostrarAlerta('danger', data.error || 'Error al ejecutar backup');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    mostrarAlerta('danger', 'Error de conexión');
                });
            }
        }

        function limpiarCache() {
            if (confirm('¿Limpiar el cache del sistema?')) {
                mostrarAlerta('success', 'Cache limpiado exitosamente');
            }
        }

        function optimizarBD() {
            if (confirm('¿Optimizar la base de datos? Esta operación puede tomar varios minutos.')) {
                mostrarAlerta('info', 'Optimización iniciada. Recibirá una notificación cuando termine.');
            }
        }

        function cargarMasLogs() {
            mostrarAlerta('info', 'Cargando más logs...');
        }

        // Función para mostrar alertas
        function mostrarAlerta(tipo, mensaje) {
            const alertaHTML = `
                <div class="alert alert-${tipo} alert-dismissible fade show position-fixed" 
                     style="top: 20px; right: 20px; z-index: 9999; min-width: 300px;">
                    ${mensaje}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            `;
            
            document.body.insertAdjacentHTML('beforeend', alertaHTML);
            
            // Auto-dismiss después de 5 segundos
            setTimeout(() => {
                const alert = document.querySelector('.alert');
                if (alert) {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                }
            }, 5000);
        }
    </script>
</body>
</html>