                <i class="bi bi-cart3"></i>
                <h4>No hay carritos</h4>
                <p>Cuando los usuarios agreguen cursos a sus carritos, aparecerán aquí.</p>
            </div>
            {{/if}}
        </div>

        <!-- Actividad Reciente -->
        {{#if actividad.length}}
        <div class="table-section mt-4">
            <div class="table-header">
                <h5 class="mb-0">
                    <i class="bi bi-clock-history me-2"></i>
                    Actividad Reciente
                </h5>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Curso</th>
                            <th>Acción</th>
                            <th>Hace</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each actividad}}
                        <tr>
                            <td><strong>{{this.usuario_nombre}}</strong></td>
                            <td>{{this.curso_titulo}}</td>
                            <td>
                                <span class="badge bg-info">{{this.accion}}</span>
                            </td>
                            <td>
                                {{#if (lt this.minutos_transcurridos 60)}}
                                {{this.minutos_transcurridos}} minutos
                                {{else}}
                                {{formatDate this.fecha_agregado}}
                                {{/if}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        {{/if}}
    </div>

    <!-- Modal Detalle de Carrito -->
    <div class="modal fade" id="detalleModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Detalle del Carrito</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="detalleContent">
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Variables globales
        let detalleModal;
        
        // Inicializar cuando carga la página
        document.addEventListener('DOMContentLoaded', function() {
            detalleModal = new bootstrap.Modal(document.getElementById('detalleModal'));
        });
        
        // Filtrar tabla
        function filtrarTabla() {
            const searchTerm = document.getElementById('searchInput').value.toLowerCase();
            const rows = document.querySelectorAll('#carritosTable tbody tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        }
        
        // Ver detalle del carrito
        async function verDetalleCarrito(idUsuario) {
            detalleModal.show();
            
            try {
                showLoading(true);
                
                const response = await fetch(`/admin/carritos/${idUsuario}`);
                const data = await response.json();
                
                if (data.success) {
                    let html = '<div class="row g-3">';
                    
                    data.items.forEach(item => {
                        html += `
                            <div class="col-12">
                                <div class="d-flex align-items-center gap-3 p-3 border rounded">
                                    ${item.miniatura ? 
                                        `<img src="${item.miniatura}" alt="${item.titulo}" class="curso-image">` :
                                        '<div class="curso-image bg-light d-flex align-items-center justify-content-center"><i class="bi bi-book"></i></div>'
                                    }
                                    <div class="flex-grow-1">
                                        <h6>${item.titulo}</h6>
                                        <p class="mb-0 text-muted">Agregado: ${new Date(item.fecha_agregado).toLocaleString()}</p>
                                    </div>
                                    <div class="text-end">
                                        <strong>$${item.precio}</strong>
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                    
                    html += '</div>';
                    document.getElementById('detalleContent').innerHTML = html;
                } else {
                    document.getElementById('detalleContent').innerHTML = `
                        <div class="alert alert-warning">
                            ${data.message}
                        </div>
                    `;
                }
            } catch (error) {
                document.getElementById('detalleContent').innerHTML = `
                    <div class="alert alert-danger">
                        Error al cargar los detalles del carrito
                    </div>
                `;
            } finally {
                showLoading(false);
            }
        }
        
        // Mostrar/ocultar loading
        function showLoading(show) {
            const overlay = document.getElementById('loadingOverlay');
            overlay.style.display = show ? 'flex' : 'none';
        }
    </script>
</body>
</html>