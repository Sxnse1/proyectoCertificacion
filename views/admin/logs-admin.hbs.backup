<body>
    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay">
        <div class="text-center">
            <div class="spinner-border mb-3" role="status">
                <span class="visually-hidden">Cargando...</span>
            </div>
            <p>Procesando...</p>
        </div>
    </div>

    <div class="main-container">
        <!-- Header Section -->
        <div class="header-section">
            <div class="header-title">
                <h1>
                    <i class="bi bi-shield-check"></i>
                    Logs de Auditoría
                </h1>
                <div class="d-flex gap-2">
                    <a href="/admin/security-alerts" class="btn btn-outline-secondary">
                        <i class="bi bi-exclamation-triangle me-2"></i>Alertas de Seguridad
                    </a>
                    <a href="/dashboard" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left me-2"></i>Dashboard
                    </a>
                </div>
            </div>
            
            <!-- Estadísticas -->
            <div class="stats-row">
                <div class="stat-card">
                    <span class="stat-number">{{stats.resumen.totalLogs}}</span>
                    <div class="stat-label">Total de Logs</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{stats.resumen.logsHoy}}</span>
                    <div class="stat-label">Logs Hoy</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{stats.resumen.usuariosActivos}}</span>
                    <div class="stat-label">Usuarios Activos</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{stats.resumen.entidadesAfectadas}}</span>
                    <div class="stat-label">Entidades Afectadas</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{stats.resumen.accionesUnicas}}</span>
                    <div class="stat-label">Acciones Únicas</div>
                </div>
            </div>
        </div>

        <!-- Controls Section -->
        <div class="controls-section">
            <form method="GET" class="mb-0">
                <div class="filters-row">
                    <div>
                        <label class="form-label">Buscar Usuario</label>
                        <input type="text" 
                               class="form-control search-input" 
                               name="searchUser" 
                               placeholder="Buscar por usuario..." 
                               value="{{searchUser}}">
                    </div>
                    <div>
                        <label class="form-label">Entidad</label>
                        <select class="form-select" name="filterEntity">
                            <option value="">Todas las entidades</option>
                            {{#each uniqueEntities}}
                            <option value="{{this}}" {{#if (eq this ../filterEntity)}}selected{{/if}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div>
                        <label class="form-label">Acción</label>
                        <select class="form-select" name="filterAction">
                            <option value="">Todas las acciones</option>
                            {{#each uniqueActions}}
                            <option value="{{toLowerCase this}}" {{#if (eq (toLowerCase this) ../filterAction)}}selected{{/if}}>{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div>
                        <label class="form-label">Fecha</label>
                        <input type="date" 
                               class="form-control search-input" 
                               name="filterDate" 
                               value="{{filterDate}}">
                    </div>
                </div>
                
                <div class="d-flex justify-content-between align-items-center mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-funnel me-2"></i>Filtrar
                    </button>
                    
                    <div class="export-buttons">
                        <a href="/admin/logs/export/csv{{#if (or searchUser filterEntity filterAction filterDate)}}?{{#if searchUser}}searchUser={{searchUser}}&{{/if}}{{#if filterEntity}}filterEntity={{filterEntity}}&{{/if}}{{#if filterAction}}filterAction={{filterAction}}&{{/if}}{{#if filterDate}}filterDate={{filterDate}}{{/if}}{{/if}}" 
                           class="btn btn-success">
                            <i class="bi bi-file-earmark-spreadsheet me-1"></i>CSV
                        </a>
                        <a href="/admin/logs/export/json{{#if (or searchUser filterEntity filterAction filterDate)}}?{{#if searchUser}}searchUser={{searchUser}}&{{/if}}{{#if filterEntity}}filterEntity={{filterEntity}}&{{/if}}{{#if filterAction}}filterAction={{filterAction}}&{{/if}}{{#if filterDate}}filterDate={{filterDate}}{{/if}}{{/if}}" 
                           class="btn btn-success">
                            <i class="bi bi-file-earmark-code me-1"></i>JSON
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <!-- Table Section -->
        <div class="table-section">
            <div class="table-header">
                <h5 class="mb-0">
                    <i class="bi bi-list-ul me-2"></i>
                    Registro de Actividad
                    {{#if (or searchUser filterEntity filterAction filterDate)}}
                        <small class="text-muted">- Filtros aplicados</small>
                    {{/if}}
                </h5>
            </div>
            
            {{#if logs.length}}
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Usuario</th>
                            <th>Acción</th>
                            <th>Entidad</th>
                            <th>Detalles</th>
                            <th>IP</th>
                            <th>Fecha</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each logs}}
                        <tr>
                            <td>
                                <div class="log-user">{{NombreUsuario}}</div>
                                <small class="text-muted">{{Email}}</small>
                            </td>
                            <td>
                                <span class="log-action {{toLowerCase Accion}}">
                                    {{#if (eq Accion "CREATE")}}
                                        <i class="bi bi-plus-circle"></i> Crear
                                    {{else if (eq Accion "UPDATE")}}
                                        <i class="bi bi-pencil-square"></i> Actualizar
                                    {{else if (eq Accion "DELETE")}}
                                        <i class="bi bi-trash"></i> Eliminar
                                    {{else if (eq Accion "LOGIN")}}
                                        <i class="bi bi-box-arrow-in-right"></i> Login
                                    {{else}}
                                        <i class="bi bi-gear"></i> {{Accion}}
                                    {{/if}}
                                </span>
                            </td>
                            <td>
                                <span class="log-entity">{{Entidad}}</span>
                                {{#if EntidadID}}
                                    <div class="text-muted" style="font-size: 0.7rem;">ID: {{EntidadID}}</div>
                                {{/if}}
                            </td>
                            <td>
                                {{#if Detalles}}
                                    <div class="log-details" title="{{Detalles}}">{{truncate Detalles 50}}</div>
                                {{else}}
                                    <em class="text-muted">Sin detalles</em>
                                {{/if}}
                            </td>
                            <td>
                                <span class="log-ip">{{IP}}</span>
                            </td>
                            <td>
                                <div class="log-timestamp">{{formatTime Timestamp}}</div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
            {{else}}
            <div class="empty-state">
                <i class="bi bi-shield-check"></i>
                <h4>No hay logs disponibles</h4>
                <p>
                    {{#if (or searchUser filterEntity filterAction filterDate)}}
                        No se encontraron logs que coincidan con los filtros aplicados.
                    {{else}}
                        Aún no hay registros de actividad en el sistema.
                    {{/if}}
                </p>
                {{#if (or searchUser filterEntity filterAction filterDate)}}
                    <a href="/admin/logs" class="btn btn-primary">
                        <i class="bi bi-arrow-clockwise me-2"></i>Limpiar Filtros
                    </a>
                {{/if}}
            </div>
            {{/if}}
        </div>

        <!-- Pagination -->
        {{#if (gt totalPages 1)}}
        <div class="pagination-section">
            <nav aria-label="Paginación de logs">
                <ul class="pagination">
                    {{#if (gt currentPage 1)}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{subtract currentPage 1}}{{#if searchUser}}&searchUser={{searchUser}}{{/if}}{{#if filterEntity}}&filterEntity={{filterEntity}}{{/if}}{{#if filterAction}}&filterAction={{filterAction}}{{/if}}{{#if filterDate}}&filterDate={{filterDate}}{{/if}}">Anterior</a>
                    </li>
                    {{/if}}
                    
                    {{#for 1 totalPages currentPage}}
                    <li class="page-item {{#if active}}active{{/if}}">
                        <a class="page-link" href="?page={{page}}{{#if ../searchUser}}&searchUser={{../searchUser}}{{/if}}{{#if ../filterEntity}}&filterEntity={{../filterEntity}}{{/if}}{{#if ../filterAction}}&filterAction={{../filterAction}}{{/if}}{{#if ../filterDate}}&filterDate={{../filterDate}}{{/if}}">{{page}}</a>
                    </li>
                    {{/for}}
                    
                    {{#if (lt currentPage totalPages)}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{add currentPage 1}}{{#if searchUser}}&searchUser={{searchUser}}{{/if}}{{#if filterEntity}}&filterEntity={{filterEntity}}{{/if}}{{#if filterAction}}&filterAction={{filterAction}}{{/if}}{{#if filterDate}}&filterDate={{filterDate}}{{/if}}">Siguiente</a>
                    </li>
                    {{/if}}
                </ul>
            </nav>
            
            <div class="text-center mt-3">
                <small class="text-muted">
                    Página {{currentPage}} de {{totalPages}} ({{totalRecords}} logs en total)
                </small>
            </div>
        </div>
        {{/if}}
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Función para mostrar/ocultar loading
        function showLoading(show) {
            const overlay = document.getElementById('loadingOverlay');
            overlay.style.display = show ? 'flex' : 'none';
        }

        // Auto-submit en los selects
        document.addEventListener('DOMContentLoaded', function() {
            const selects = document.querySelectorAll('.form-select');
            selects.forEach(select => {
                select.addEventListener('change', function() {
                    showLoading(true);
                    this.form.submit();
                });
            });
        });

        // Mostrar loading al enviar formularios
        document.addEventListener('submit', function() {
            showLoading(true);
        });

        // Mostrar loading al hacer click en links de exportación
        document.addEventListener('click', function(e) {
            if (e.target.closest('a[href*="/export/"]')) {
                showLoading(true);
                
                // Ocultar loading después de un tiempo para permitir la descarga
                setTimeout(() => {
                    showLoading(false);
                }, 3000);
            }
        });
    </script>
