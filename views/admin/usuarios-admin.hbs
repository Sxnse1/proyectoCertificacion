    <!-- Modal Cambiar Rol -->
    <div class="modal fade" id="changeRoleModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi bi-shield-check"></i> Cambiar Rol de Usuario
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="changeRoleForm">
                    <input type="hidden" id="change_role_user_id" name="userId">
                    <input type="hidden" id="change_role_current_role_id" name="currentRoleId">
                    <div class="modal-body">
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>¡Atención!</strong> Cambiar el rol de un usuario modificará inmediatamente sus permisos en el sistema.
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label"><strong>Usuario:</strong></label>
                            <p id="change_role_user_name" class="form-control-plaintext"></p>
                        </div>

                        <div class="mb-3">
                            <label class="form-label"><strong>Rol Actual:</strong></label>
                            <p id="change_role_current_role" class="form-control-plaintext text-muted"></p>
                        </div>

                        <div class="mb-3">
                            <label for="change_role_new_role" class="form-label"><strong>Nuevo Rol *</strong></label>
                            <select class="form-select" id="change_role_new_role" name="newRoleId" required>
                                <option value="">Seleccionar nuevo rol...</option>
                                {{#each rolesDisponibles}}
                                <option value="{{RolID}}" data-nombre="{{NombreRol}}" title="{{Descripcion}}">
                                    {{NombreRol}} - {{Descripcion}}
                                </option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="change_role_reason" class="form-label">Motivo del cambio (opcional)</label>
                            <textarea class="form-control" id="change_role_reason" name="reason" rows="3" 
                                placeholder="Describe el motivo de este cambio de rol..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-shield-check"></i> Cambiar Rol
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5.3 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Crear usuario
        document.getElementById('createUsuarioForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Agregar el nombre del rol basado en la selección
            const rolSelect = document.getElementById('create_rol');
            const selectedOption = rolSelect.options[rolSelect.selectedIndex];
            if (selectedOption && selectedOption.dataset.nombre) {
                data.rolNombre = selectedOption.dataset.nombre;
            }

            try {
                const response = await fetch('/admin/usuarios', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    showAlert('success', result.message);
                    bootstrap.Modal.getInstance(document.getElementById('createUsuarioModal')).hide();
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showAlert('danger', result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('danger', 'Error al crear el usuario');
            }
        });

        // Ver usuario
        async function viewUsuario(id) {
            try {
                const response = await fetch(`/admin/usuarios/${id}`);
                const result = await response.json();

                if (result.success) {
                    const usuario = result.usuario;
                    document.getElementById('viewUsuarioContent').innerHTML = `
                        <div class="row g-3">
                            <div class="col-12 text-center">
                                <div class="usuario-avatar mx-auto" style="width: 80px; height: 80px; font-size: 2rem;">
                                    ${usuario.nombre.charAt(0)}${usuario.apellido.charAt(0)}
                                </div>
                                <h4 class="mt-3">${usuario.nombre} ${usuario.apellido}</h4>
                                <p class="text-muted">@${usuario.nombre_usuario}</p>
                            </div>
                            <div class="col-md-6">
                                <h6>Información Básica</h6>
                                <p><strong>Email:</strong> ${usuario.email}</p>
                                <p><strong>Rol:</strong> 
                                    <span class="badge badge-custom badge-rol ${usuario.rol}">
                                        ${usuario.rol === 'instructor' ? 'Instructor' : 'Estudiante'}
                                    </span>
                                </p>
                                <p><strong>Estado:</strong> 
                                    <span class="badge status-${usuario.estatus}">${usuario.estatus}</span>
                                </p>
                                <p><strong>Registro:</strong> ${new Date(usuario.fecha_registro).toLocaleDateString('es-ES')}</p>
                            </div>
                            <div class="col-md-6">
                                <h6>Estadísticas</h6>
                                <div class="row text-center">
                                    ${usuario.rol === 'instructor' ? `
                                    <div class="col-6">
                                        <div class="border rounded p-2">
                                            <h5 class="mb-0 text-primary">${usuario.cursos_creados}</h5>
                                            <small>Cursos Creados</small>
                                        </div>
                                    </div>
                                    ` : `
                                    <div class="col-6">
                                        <div class="border rounded p-2">
                                            <h5 class="mb-0 text-info">${usuario.cursos_en_progreso}</h5>
                                            <small>En Progreso</small>
                                        </div>
                                    </div>
                                    `}
                                    <div class="col-6">
                                        <div class="border rounded p-2">
                                            <h5 class="mb-0 text-success">${usuario.compras_realizadas}</h5>
                                            <small>Compras</small>
                                        </div>
                                    </div>
                                    ${usuario.certificados_obtenidos ? `
                                    <div class="col-12 mt-2">
                                        <div class="border rounded p-2">
                                            <h5 class="mb-0 text-warning">${usuario.certificados_obtenidos}</h5>
                                            <small>Certificados</small>
                                        </div>
                                    </div>
                                    ` : ''}
                                </div>
                            </div>
                        </div>
                    `;

                    const modal = new bootstrap.Modal(document.getElementById('viewUsuarioModal'));
                    modal.show();
                } else {
                    showAlert('danger', result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('danger', 'Error al obtener los detalles del usuario');
            }
        }

        // Editar usuario
        async function editUsuario(id) {
            try {
                const response = await fetch(`/admin/usuarios/${id}`);
                const result = await response.json();

                if (result.success) {
                    const usuario = result.usuario;

                    document.getElementById('edit_id_usuario').value = usuario.id_usuario;
                    document.getElementById('edit_nombre').value = usuario.nombre;
                    document.getElementById('edit_apellido').value = usuario.apellido;
                    document.getElementById('edit_nombre_usuario').value = usuario.nombre_usuario;
                    document.getElementById('edit_email').value = usuario.email;
                    document.getElementById('edit_rol').value = usuario.RolID || usuario.rolId;
                    document.getElementById('edit_estatus').value = usuario.estatus;

                    const modal = new bootstrap.Modal(document.getElementById('editUsuarioModal'));
                    modal.show();
                } else {
                    showAlert('danger', result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('danger', 'Error al obtener los datos del usuario');
            }
        }

        document.getElementById('editUsuarioForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            const id = data.id_usuario;
            
            // Agregar el nombre del rol basado en la selección
            const rolSelect = document.getElementById('edit_rol');
            const selectedOption = rolSelect.options[rolSelect.selectedIndex];
            if (selectedOption && selectedOption.dataset.nombre) {
                data.rolNombre = selectedOption.dataset.nombre;
            }

            try {
                const response = await fetch(`/admin/usuarios/${id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    showAlert('success', result.message);
                    bootstrap.Modal.getInstance(document.getElementById('editUsuarioModal')).hide();
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showAlert('danger', result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('danger', 'Error al actualizar el usuario');
            }
        });

        // Cambiar estado del usuario
        async function changeStatus(id, newStatus, nombre) {
            const statusNames = {
                'activo': 'activar',
                'inactivo': 'desactivar',
                'baneado': 'banear'
            };

            if (confirm(`¿Estás seguro de que deseas ${statusNames[newStatus]} al usuario "${nombre}"?`)) {
                try {
                    const response = await fetch(`/admin/usuarios/${id}/status`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ estatus: newStatus })
                    });

                    const result = await response.json();

                    if (result.success) {
                        showAlert('success', result.message);
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        showAlert('danger', result.message);
                    }
                } catch (error) {
                    console.error('Error:', error);
                    showAlert('danger', 'Error al cambiar el estado del usuario');
                }
            }
        }

        // Eliminar usuario
        function deleteUsuario(id, nombre, cursosCreados, comprasRealizadas) {
            if (cursosCreados > 0 || comprasRealizadas > 0) {
                showAlert('warning', `No se puede eliminar al usuario "${nombre}" porque tiene datos relacionados. Considera cambiar su estado a "inactivo" en su lugar.`);
                return;
            }

            if (confirm(`¿Estás seguro de que deseas eliminar al usuario "${nombre}"?\n\nEsta acción no se puede deshacer.`)) {
                fetch(`/admin/usuarios/${id}`, {
                    method: 'DELETE'
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showAlert('success', data.message);
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            showAlert('danger', data.message);
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showAlert('danger', 'Error al eliminar el usuario');
                    });
            }
        }

        // Cambiar rol de usuario
        function changeUserRole(userId, currentRoleId, userName) {
            document.getElementById('change_role_user_id').value = userId;
            document.getElementById('change_role_current_role_id').value = currentRoleId;
            document.getElementById('change_role_user_name').textContent = userName;
            
            // Buscar el nombre del rol actual
            const roleSelect = document.getElementById('change_role_new_role');
            let currentRoleName = 'Desconocido';
            for (let option of roleSelect.options) {
                if (option.value == currentRoleId) {
                    currentRoleName = option.dataset.nombre + ' - ' + option.title;
                    break;
                }
            }
            document.getElementById('change_role_current_role').textContent = currentRoleName;
            
            // Resetear el formulario
            document.getElementById('change_role_new_role').value = '';
            document.getElementById('change_role_reason').value = '';
            
            const modal = new bootstrap.Modal(document.getElementById('changeRoleModal'));
            modal.show();
        }

        document.getElementById('changeRoleForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            if (data.newRoleId === data.currentRoleId) {
                showAlert('warning', 'El nuevo rol debe ser diferente al rol actual');
                return;
            }

            // Agregar el nombre del nuevo rol
            const roleSelect = document.getElementById('change_role_new_role');
            const selectedOption = roleSelect.options[roleSelect.selectedIndex];
            if (selectedOption && selectedOption.dataset.nombre) {
                data.newRoleName = selectedOption.dataset.nombre;
            }

            try {
                const response = await fetch(`/admin/usuarios/${data.userId}/role`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                const result = await response.json();

                if (result.success) {
                    showAlert('success', result.message);
                    bootstrap.Modal.getInstance(document.getElementById('changeRoleModal')).hide();
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showAlert('danger', result.message);
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('danger', 'Error al cambiar el rol del usuario');
            }
        });

        // Función para mostrar alertas
        function showAlert(type, message) {
            const alert = document.createElement('div');
            alert.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alert.style.cssText = 'top: 20px; right: 20px; z-index: 9999; max-width: 400px;';
            alert.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            document.body.appendChild(alert);

            setTimeout(() => {
                if (alert.parentNode) {
                    alert.remove();
                }
            }, 5000);
        }
    </script>
