                                    <i class="bi bi-pencil me-1"></i>Editar
                                </button>
                                <button type="button"
                                    class="btn btn-outline-secondary btn-sm dropdown-toggle dropdown-toggle-split"
                                    data-bs-toggle="dropdown">
                                    <span class="visually-hidden">M√°s</span>
                                </button>
                                <ul class="dropdown-menu">
                                    {{#if (eq this.estatus 'publicado')}}
                                    <li><a class="dropdown-item" href="#"
                                            onclick="changeVideoStatus({{this.id_video}}, 'borrador', '{{this.titulo}}')">
                                            <i class="bi bi-clock text-warning me-2"></i>Cambiar a Borrador
                                        </a></li>
                                    <li><a class="dropdown-item" href="#"
                                            onclick="changeVideoStatus({{this.id_video}}, 'archivado', '{{this.titulo}}')">
                                            <i class="bi bi-archive text-muted me-2"></i>Archivar
                                        </a></li>
                                    {{else if (eq this.estatus 'borrador')}}
                                    <li><a class="dropdown-item" href="#"
                                            onclick="changeVideoStatus({{this.id_video}}, 'publicado', '{{this.titulo}}')">
                                            <i class="bi bi-check-circle text-success me-2"></i>Publicar
                                        </a></li>
                                    <li><a class="dropdown-item" href="#"
                                            onclick="changeVideoStatus({{this.id_video}}, 'archivado', '{{this.titulo}}')">
                                            <i class="bi bi-archive text-muted me-2"></i>Archivar
                                        </a></li>
                                    {{else if (eq this.estatus 'archivado')}}
                                    <li><a class="dropdown-item" href="#"
                                            onclick="changeVideoStatus({{this.id_video}}, 'publicado', '{{this.titulo}}')">
                                            <i class="bi bi-check-circle text-success me-2"></i>Publicar
                                        </a></li>
                                    <li><a class="dropdown-item" href="#"
                                            onclick="changeVideoStatus({{this.id_video}}, 'borrador', '{{this.titulo}}')">
                                            <i class="bi bi-clock text-warning me-2"></i>A Borrador
