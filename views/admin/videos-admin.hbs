                            <i class="bi bi-play-fill"></i>
                        </div> --}}
                        {{#if this.duracion_minutos}}
                        <div class="video-duration">
                            <i class="bi bi-clock me-1"></i>{{this.duracion_minutos}} min
                        </div>
                        {{/if}}
                    </div>

                    <!-- Video Info -->
                    <div class="video-info">
                        <h5 class="video-title">{{this.titulo}}</h5>

                        {{#if this.descripcion}}
                        <p class="video-description">{{this.descripcion}}</p>
                        {{/if}}

                        <div class="video-meta">
                            <div class="d-flex align-items-center gap-2 mb-2">
                                <i class="bi bi-collection text-muted"></i>
                                <small class="text-muted video-module">{{this.modulo_titulo}}</small>
                            </div>
                            <div class="d-flex align-items-center gap-2 mb-2">
                                <i class="bi bi-book text-muted"></i>
                                <small class="text-muted video-course">{{this.curso_titulo}}</small>
                            </div>
                            <span class="video-status status-{{this.estatus}}">
                                {{#if (eq this.estatus 'publicado')}}‚úÖ Publicado{{/if}}
                                {{#if (eq this.estatus 'borrador')}}üìù Borrador{{/if}}
                                {{#if (eq this.estatus 'archivado')}}üì¶ Archivado{{/if}}
                            </span>
                        </div>

                        <div class="video-actions">
                            {{#if this.vimeo_id}}
                            <button class="btn btn-primary btn-sm video-play-btn" data-bunny-id="{{this.bunny_id}}"
                                data-vimeo-id="{{this.vimeo_id}}" data-titulo="{{this.titulo}}"
                                data-descripcion="{{this.descripcion}}" data-duracion="{{this.duracion_segundos}}"
                                data-orden="{{this.orden}}" data-estatus="{{this.estatus}}"
                                data-modulo="{{this.id_modulo}}">
                                <i class="bi bi-play-circle me-1"></i>Ver
                            </button>
                            {{/if}}

                            <div class="btn-group">
