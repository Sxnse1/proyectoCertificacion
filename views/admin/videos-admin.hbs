                </div>
            </div>

            <!-- Stats Row -->
            <div class="stats-row">
                <div class="stat-card">
                    <span class="stat-number">{{videos.length}}</span>
                    <div class="stat-label">Total Videos</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number text-success" id="activosCount">0</span>
                    <div class="stat-label">Videos Activos</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number text-warning" id="borradoresCount">0</span>
                    <div class="stat-label">En Borrador</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number text-danger" id="archivadosCount">0</span>
                    <div class="stat-label">Archivados</div>
                </div>
            </div>
        </div>

        <!-- Controls Section -->
        <div class="controls-section">
            <div class="search-controls">
                <div class="search-input">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text" class="form-control border-start-0"
                            placeholder="Buscar por t√≠tulo, descripci√≥n o m√≥dulo..." id="searchInput">
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <select class="form-select" id="statusFilter" style="min-width: 160px;">
                        <option value="">üìã Todos los estados</option>
                        <option value="publicado">‚úÖ Publicados</option>
                        <option value="borrador">üìù Borradores</option>
                        <option value="archivado">üì¶ Archivados</option>
                    </select>
                    <button class="btn btn-outline-secondary" onclick="clearFilters()">
                        <i class="bi bi-arrow-clockwise me-1"></i>Limpiar
                    </button>
                </div>
            </div>
        </div>

        <!-- Videos Content -->
        <div class="content-section">
            {{#if videos.length}}
            <div class="videos-grid" id="videosGrid">
                {{#each videos}}
                <div class="video-card" data-video-id="{{this.id_video}}" data-status="{{this.estatus}}"
                    data-module="{{this.id_modulo}}" data-bunny-id="{{this.bunny_id}}" data-vimeo-id="{{this.vimeo_id}}"
                    data-titulo="{{this.titulo}}" data-description="{{this.descripcion}}"
                    data-duracion="{{this.duracion_segundos}}" data-orden="{{this.orden}}"
                    data-estatus="{{this.estatus}}" data-modulo-id="{{this.id_modulo}}"
                    data-provider="{{this.video_provider}}" data-duration="{{this.duracion_segundos}}"
                    data-fecha="{{this.fecha_formateada}}"
                    data-fecha-modificacion="{{this.fecha_modificacion_formateada}}">
                    <!-- Video Thumbnail -->
                    <div class="video-thumbnail">
                        {{#if this.bunny_id}}
