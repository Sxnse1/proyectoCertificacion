    <script>
        function initUploadModal() {
            const fileDropArea = document.getElementById('fileDropArea');
            const fileInput = document.getElementById('fileInput');
            const fileInfo = document.getElementById('fileInfo');
            const fileName = document.getElementById('fileName');
            const fileSize = document.getElementById('fileSize');
            const uploadForm = document.getElementById('uploadForm');
            const uploadProgress = document.getElementById('uploadProgress');
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            const uploadStatus = document.getElementById('uploadStatus');
            const submitBtn = document.getElementById('submitBtn');

            // Drag & drop handlers
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                fileDropArea.addEventListener(eventName, preventDefaults, false);
            });

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            ['dragenter', 'dragover'].forEach(eventName => {
                fileDropArea.addEventListener(eventName, () => fileDropArea.classList.add('dragover'), false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                fileDropArea.addEventListener(eventName, () => fileDropArea.classList.remove('dragover'), false);
            });

            // Handle file drop
            fileDropArea.addEventListener('drop', (e) => {
                const dt = e.dataTransfer;
                const files = dt.files;

                if (files.length > 0) {
                    fileInput.files = files;
                    handleFileSelect(files[0]);
                }
            });

            // Handle click to select file
            fileDropArea.addEventListener('click', () => fileInput.click());

            // Handle file selection
            fileInput.addEventListener('change', (e) => {
                if (e.target.files.length > 0) {
                    handleFileSelect(e.target.files[0]);
                }
            });

            // Handle module selection to suggest next order
            const moduloSelect = document.getElementById('id_modulo');
            const ordenInput = document.getElementById('orden');
            
            if (moduloSelect && ordenInput) {
                moduloSelect.addEventListener('change', async (e) => {
                    const moduloId = e.target.value;
                    if (moduloId) {
                        await suggestNextOrder(moduloId, ordenInput);
                    }
                });
            }

            function handleFileSelect(file) {
                console.log('üìÅ Archivo seleccionado:', file.name, file.size);

                fileName.textContent = file.name;
                fileSize.textContent = formatFileSize(file.size);
                fileInfo.style.display = 'block';
                fileDropArea.classList.add('has-file');

                fileDropArea.innerHTML = `
                    <div class="drop-content">
                        <i class="bi bi-file-earmark-play" style="font-size: 2.5rem; color: #10b981; margin-bottom: 1rem;"></i>
                        <h5 class="text-success">¬°Archivo seleccionado!</h5>
                        <p><strong>${file.name}</strong></p>
                        <p class="small text-muted">Haz clic para cambiar</p>
                    </div>
                `;
            }

            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
            }

            function showStatus(type, message) {
                uploadStatus.className = `upload-status ${type}`;
                uploadStatus.innerHTML = message;
                uploadStatus.style.display = 'block';
            }

            function hideStatus() {
                uploadStatus.style.display = 'none';
            }

            // Handle form submission
            uploadForm.addEventListener('submit', async (e) => {
                e.preventDefault();

                if (!fileInput.files[0]) {
                    showStatus('error', 'Por favor selecciona un archivo de video.');
                    return;
                }

                const formData = new FormData();
                formData.append('video', fileInput.files[0]);
                formData.append('titulo', document.getElementById('titulo').value);
                formData.append('descripcion', document.getElementById('descripcion').value);
                formData.append('id_modulo', document.getElementById('id_modulo').value);
                formData.append('duracion_minutos', document.getElementById('duracion_minutos').value);
                formData.append('estatus', document.getElementById('estatus').value);

                // Show progress
                uploadProgress.style.display = 'block';
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Subiendo...';
                hideStatus();

                try {
                    console.log('üöÄ Enviando video al servidor...');
                    const response = await fetch('/admin/videos/upload', {
                        method: 'POST',
                        body: formData
                    });

                    const result = await response.json();
                    console.log('üì° Respuesta del servidor:', result);

                    if (result.success) {
                        showStatus('success', '¬°Video subido exitosamente!');

                        // Close modal and refresh page after 2 seconds
                        setTimeout(() => {
                            bootstrap.Modal.getInstance(document.getElementById('uploadVideoModal')).hide();
                            location.reload();
                        }, 2000);
                    } else {
                        showStatus('error', 'Error al subir el video: ' + result.error);
                        submitBtn.disabled = false;
                        submitBtn.innerHTML = '<i class="bi bi-cloud-upload me-2"></i>Subir Video';
                    }
                } catch (error) {
                    console.error('‚ùå Error:', error);
                    showStatus('error', 'Error de conexi√≥n al subir el video.');
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="bi bi-cloud-upload me-2"></i>Subir Video';
                }

                uploadProgress.style.display = 'none';
            });

            // Reset form when modal closes
            document.getElementById('uploadVideoModal').addEventListener('hidden.bs.modal', () => {
                uploadForm.reset();
                fileInfo.style.display = 'none';
                fileDropArea.classList.remove('has-file');
                fileDropArea.innerHTML = `
                    <div class="drop-content">
                        <i class="bi bi-cloud-upload" style="font-size: 2.5rem; color: var(--primary-color); margin-bottom: 1rem;"></i>
                        <h5>Arrastra tu video aqu√≠</h5>
                        <p class="text-muted">o <strong>haz clic para seleccionar</strong></p>
                        <p class="small text-muted">Formatos: MP4, MOV, AVI, WMV (m√°x. 500MB)</p>
                    </div>
                `;
                hideStatus();
                submitBtn.disabled = false;
                submitBtn.innerHTML = '<i class="bi bi-cloud-upload me-2"></i>Subir Video';
            });
        }

        // Funci√≥n para sugerir el siguiente orden en un m√≥dulo
        async function suggestNextOrder(moduloId, ordenInput) {
            try {
                console.log('üîç Obteniendo siguiente orden para m√≥dulo:', moduloId);
                
                // Buscar los √≥rdenes actuales en los videos del m√≥dulo
                const videoCards = document.querySelectorAll(`[data-modulo-id="${moduloId}"]`);
                let maxOrden = 0;
                const ordenesUsados = [];
                
                videoCards.forEach(card => {
                    const orden = parseInt(card.getAttribute('data-orden')) || 0;
                    if (orden > 0) {
                        ordenesUsados.push(orden);
                        if (orden > maxOrden) {
                            maxOrden = orden;
                        }
                    }
                });
                
                const siguienteOrden = maxOrden + 1;
                console.log('üìä √ìrdenes usados:', ordenesUsados, '-> Sugerido:', siguienteOrden);
                
                ordenInput.value = siguienteOrden;
                ordenInput.placeholder = `Sugerido: ${siguienteOrden}`;
                ordenInput.title = `√ìrdenes en uso: ${ordenesUsados.length > 0 ? ordenesUsados.sort((a,b) => a-b).join(', ') : 'ninguno'}. Sugerido: ${siguienteOrden}`;
                
                // Mostrar una peque√±a animaci√≥n visual
                ordenInput.style.backgroundColor = '#e8f5e8';
                setTimeout(() => {
                    ordenInput.style.backgroundColor = '';
                }, 1000);
                
                // Agregar validaci√≥n en tiempo real
                ordenInput.oninput = function() {
                    const valorActual = parseInt(this.value);
                    if (valorActual && ordenesUsados.includes(valorActual)) {
                        this.style.borderColor = '#ffc107';
                        this.title = `‚ö†Ô∏è El orden ${valorActual} ya est√° en uso. Considera usar ${siguienteOrden}.`;
                    } else {
                        this.style.borderColor = '';
                        this.title = `√ìrdenes en uso: ${ordenesUsados.length > 0 ? ordenesUsados.sort((a,b) => a-b).join(', ') : 'ninguno'}`;
                    }
                };
                
            } catch (error) {
                console.error('Error obteniendo siguiente orden:', error);
            }
        }

        // Funci√≥n para abrir el reproductor de video
        function openVideoPlayer(element) {
            const bunnyId = element.dataset.bunnyId || element.dataset.vimeoId;
            if (!bunnyId) return;

            const titulo = element.dataset.titulo || '';
            const descripcion = element.dataset.descripcion || '';
            const duracion = element.dataset.duracion || 0;
            const orden = element.dataset.orden || 1;
            const estatus = element.dataset.estatus || 'publicado';
            const modulo = element.dataset.modulo || element.dataset.moduloId || '';

            // Construir URL con par√°metros codificados
            const params = new URLSearchParams({
                title: titulo,
                description: descripcion,
                duration: duracion,
                order: orden,
                status: estatus,
                module: modulo
            });

            const url = `/video/${bunnyId}?${params.toString()}`;

            // Abrir en nueva pesta√±a
            window.open(url, '_blank');
        }

        // Event listeners para elementos de reproducci√≥n
        document.addEventListener('DOMContentLoaded', function () {
            // Botones de reproducir
            const playButtons = document.querySelectorAll('.video-play-btn');
            playButtons.forEach(button => {
                button.addEventListener('click', function (e) {
                    e.stopPropagation();
                    openVideoPlayer(this);
                });
            });

            // Overlays de reproducci√≥n
            const playOverlays = document.querySelectorAll('.video-play-overlay');
            playOverlays.forEach(overlay => {
                overlay.addEventListener('click', function (e) {
                    e.stopPropagation();
                    const videoCard = this.closest('.video-card');
                    if (videoCard) {
                        openVideoPlayer(videoCard);
                    }
                });
            });

            // Thumbnails de video
            const videoThumbnails = document.querySelectorAll('.video-thumbnail');
            videoThumbnails.forEach(thumbnail => {
                thumbnail.addEventListener('click', function (e) {
                    // Solo si el clic no fue en botones de acci√≥n
                    if (!e.target.closest('.video-actions')) {
                        const videoCard = this.closest('.video-card');
                        if (videoCard && (videoCard.dataset.bunnyId || videoCard.dataset.vimeoId)) {
                            openVideoPlayer(videoCard);
                        }
                    }
                });
            });
        });
    </script>
