                {{!-- <a href="/video/upload" class="btn btn-primary btn-lg">
                    <i class="bi bi-plus-circle me-2"></i>Subir Primer Video
                </a> --}}
            </div>
            {{/if}}
        </div>
    </div>

    <!-- Bootstrap 5.3 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Initialize counters
        function updateCounters() {
            const videoCards = document.querySelectorAll('.video-card');
            let activosCount = 0;
            let borradoresCount = 0;
            let archivadosCount = 0;

            videoCards.forEach(card => {
                const status = card.dataset.status;
                if (status === 'publicado') activosCount++;
                else if (status === 'borrador') borradoresCount++;
                else if (status === 'archivado') archivadosCount++;
            });

            document.getElementById('activosCount').textContent = activosCount;
            document.getElementById('borradoresCount').textContent = borradoresCount;
            document.getElementById('archivadosCount').textContent = archivadosCount;
        }

        // Search and filter functionality
        const searchInput = document.getElementById('searchInput');
        const statusFilter = document.getElementById('statusFilter');
        const videoCards = document.querySelectorAll('.video-card');

        function filterVideos() {
            const searchTerm = searchInput.value.toLowerCase();
            const statusValue = statusFilter.value;

            videoCards.forEach(card => {
                const title = card.querySelector('.video-title').textContent.toLowerCase();
                const description = card.querySelector('.video-description')?.textContent.toLowerCase() || '';
                const status = card.dataset.status;

                const matchesSearch = title.includes(searchTerm) || description.includes(searchTerm);
                const matchesStatus = !statusValue || status === statusValue;

                if (matchesSearch && matchesStatus) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        function clearFilters() {
            searchInput.value = '';
            statusFilter.value = '';
            filterVideos();
        }

        // Event listeners
        searchInput.addEventListener('input', filterVideos);
        statusFilter.addEventListener('change', filterVideos);

        // Video actions functions
        function editVideo(videoId) {
            console.log('‚úèÔ∏è Editando video con ID:', videoId);

            // Encontrar los datos del video en la p√°gina
            const videoCard = document.querySelector(`[data-video-id="${videoId}"]`);
            if (!videoCard) {
                console.error('‚ùå No se encontr√≥ el video con ID:', videoId);
                alert('Error: No se encontr√≥ el video');
                return;
            }

            // Extraer datos del video desde los atributos data y elementos DOM
            const videoData = {
                id: videoId,
                titulo: videoCard.querySelector('.video-title')?.textContent.trim() || '',
                descripcion: videoCard.getAttribute('data-description') || '',
                id_modulo: videoCard.getAttribute('data-modulo-id') || '',
                orden: videoCard.getAttribute('data-orden') || '1',
                estatus: videoCard.getAttribute('data-status') || 'borrador',
