        // Función para mostrar alertas con estilo moderno
        function showAlert(message, type = 'success') {
            const iconClass = {
                'success': 'bi-check-circle-fill',
                'danger': 'bi-exclamation-triangle-fill',
                'warning': 'bi-exclamation-circle-fill',
                'info': 'bi-info-circle-fill'
            };

            const alertHtml = `
                <div class="alert alert-${type} alert-dismissible fade show" role="alert" 
                     style="border: none; border-radius: 10px; box-shadow: 0 4px 15px rgba(0,0,0,0.1);">
                    <i class="bi ${iconClass[type]} me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>`;
            
            document.getElementById('alertContainer').innerHTML = alertHtml;
            
            // Auto-hide después de 5 segundos
            setTimeout(() => {
                const alert = document.querySelector('#alertContainer .alert');
                if (alert) {
                    bootstrap.Alert.getOrCreateInstance(alert).close();
                }
            }, 5000);
        }

        // Función mejorada para ver detalles del rol
        async function verRol(rolId) {
            currentRolId = rolId;
            
            try {
                const response = await fetch(`/admin/roles/${rolId}/permisos`);
                const data = await response.json();
                
                if (data.success) {
                    // Buscar información del rol
                    const rolesData = {{{json roles}}};
                    const rolData = rolesData.find(r => r.RolID === rolId);
                    currentRolData = rolData;
                    
                    // Actualizar información básica
                    document.getElementById('rolNombreDetalle').textContent = rolData.NombreRol;
                    document.getElementById('rolDescripcionDetalle').textContent = rolData.Descripcion || 'Sin descripción';
                    document.getElementById('rolIdDetalle').textContent = rolData.RolID;
                    document.getElementById('rolAvatarDetalle').textContent = rolData.NombreRol.charAt(0).toUpperCase();
                    
                    // Estado del rol
                    const estadoBadge = document.getElementById('rolEstadoDetalle');
                    if (rolData.Activo) {
                        estadoBadge.className = 'badge badge-custom status-activo';
                        estadoBadge.textContent = 'Activo';
                    } else {
                        estadoBadge.className = 'badge badge-custom status-inactivo';
                        estadoBadge.textContent = 'Inactivo';
                    }
                    
                    // Estadísticas
                    const permisosAsignados = data.permisos.filter(p => p.Asignado).length;
                    const modulosUnicos = [...new Set(data.permisos.map(p => p.Modulo))].length;
                    
                    document.getElementById('totalPermisosDetalle').textContent = permisosAsignados;
                    document.getElementById('modulosDetalle').textContent = modulosUnicos;
                    document.getElementById('usuariosDetalle').textContent = '0';
                    
                    // Generar lista de permisos por módulo
                    const permisosPorModulo = {};
                    data.permisos.filter(p => p.Asignado).forEach(permiso => {
                        if (!permisosPorModulo[permiso.Modulo]) {
                            permisosPorModulo[permiso.Modulo] = [];
                        }
                        permisosPorModulo[permiso.Modulo].push(permiso);
                    });
                    
                    let permisosHtml = '';
                    Object.keys(permisosPorModulo).forEach(modulo => {
                        const permisosModulo = permisosPorModulo[modulo];
                        
                        permisosHtml += `
                            <div class="permiso-modulo">
                                <h6>
                                    <i class="bi bi-folder2-open"></i>
                                    ${modulo}
                                    <span class="badge badge-custom badge-permisos">${permisosModulo.length} permisos</span>
                                </h6>`;
                        
                        permisosModulo.forEach(permiso => {
                            permisosHtml += `
                                <div class="permiso-item">
                                    <div style="flex-grow: 1;">
                                        <div class="permiso-nombre">${permiso.NombrePermiso}</div>
                                        ${permiso.Descripcion ? `<div class="permiso-descripcion">${permiso.Descripcion}</div>` : ''}
                                    </div>
                                    <i class="bi bi-check-circle" style="color: var(--success-color);"></i>
                                </div>`;
                        });
                        
                        permisosHtml += '</div>';
                    });
                    
                    if (permisosHtml === '') {
                        permisosHtml = `
                            <div class="text-center py-4 text-muted">
                                <i class="bi bi-shield-x" style="font-size: 2rem; opacity: 0.5;"></i>
                                <p class="mt-2">Este rol no tiene permisos asignados</p>
                            </div>`;
                    }
                    
                    document.getElementById('permisosDetalleContainer').innerHTML = permisosHtml;
                    
                    // Mostrar modal
                    new bootstrap.Modal(document.getElementById('verRolModal')).show();
                    
                } else {
                    showAlert(data.message || 'Error cargando datos del rol', 'danger');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Error de conexión al cargar datos del rol', 'danger');
            }
        }

        // Función para editar rol desde el modal de detalles
        function editarRolDesdeDetalle() {
            bootstrap.Modal.getInstance(document.getElementById('verRolModal')).hide();
            setTimeout(() => editarRol(currentRolId), 300);
        }

        // Función mejorada para editar rol
        async function editarRol(rolId) {
            currentRolId = rolId;
            
            try {
                const response = await fetch(`/admin/roles/${rolId}/permisos`);
                const data = await response.json();
                
                if (data.success) {
                    // Buscar información del rol
                    const rolesData = {{{json roles}}};
                    const rolData = rolesData.find(r => r.RolID === rolId);
                    
                    // Llenar formulario básico
                    document.getElementById('editRolId').value = rolId;
                    document.getElementById('editNombreRol').value = rolData.NombreRol;
                    document.getElementById('editDescripcionRol').value = rolData.Descripcion || '';
                    document.getElementById('editEstadoRol').value = rolData.Activo ? '1' : '0';
                    
                    // Generar permisos por módulo con diseño moderno
                    const permisosPorModulo = {};
                    data.permisos.forEach(permiso => {
                        if (!permisosPorModulo[permiso.Modulo]) {
                            permisosPorModulo[permiso.Modulo] = [];
                        }
                        permisosPorModulo[permiso.Modulo].push(permiso);
                    });
                    
                    let html = '<div class="row g-3">';
                    Object.keys(permisosPorModulo).forEach(modulo => {
                        const permisosModulo = permisosPorModulo[modulo];
                        
                        html += `
                            <div class="col-md-6">
                                <div class="permiso-modulo">
                                    <h6>
                                        <i class="bi bi-folder2-open"></i>
                                        ${modulo}
                                        <span class="badge badge-custom badge-permisos">${permisosModulo.length} permisos</span>
                                    </h6>`;
                        
                        permisosModulo.forEach(permiso => {
                            const checked = permiso.Asignado ? 'checked' : '';
                            
                            html += `
                                <div class="permiso-item">
                                    <div class="form-check" style="flex-grow: 1;">
                                        <input class="form-check-input" type="checkbox" name="permisos" 
                                               value="${permiso.PermisoID}" id="editPermiso${permiso.PermisoID}" ${checked}
                                               style="margin-top: 0.2rem;">
                                        <label class="form-check-label" for="editPermiso${permiso.PermisoID}" style="flex-grow: 1;">
                                            <div class="permiso-nombre">${permiso.NombrePermiso}</div>
                                            ${permiso.Descripcion ? `<div class="permiso-descripcion">${permiso.Descripcion}</div>` : ''}
                                        </label>
                                    </div>
                                </div>`;
                        });
                        
                        html += '</div></div>';
                    });
                    html += '</div>';
                    
                    document.getElementById('editPermisosContainer').innerHTML = html;
                    
                    // Mostrar modal
                    new bootstrap.Modal(document.getElementById('editarRolModal')).show();
                    
                } else {
                    showAlert(data.message || 'Error cargando datos del rol', 'danger');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Error de conexión al cargar datos del rol', 'danger');
            }
        }

        // Función para eliminar rol con confirmación moderna
        async function eliminarRol(rolId) {
            const rolesData = {{{json roles}}};
            const rolData = rolesData.find(r => r.RolID === rolId);
            const nombreRol = rolData ? rolData.NombreRol : 'este rol';
            
            if (confirm(`⚠️ ¿Estás seguro de eliminar "${nombreRol}"?\n\n• Esta acción no se puede deshacer\n• Se removerán todos los permisos asociados\n• Los usuarios perderán este rol\n\n¿Continuar?`)) {
                try {
                    const response = await fetch(`/admin/roles/${rolId}`, {
                        method: 'DELETE',
                        headers: { 'Content-Type': 'application/json' }
                    });
                    
                    const data = await response.json();
                    
                    if (data.success) {
                        showAlert(`✅ ${data.message}`, 'success');
                        setTimeout(() => location.reload(), 2000);
                    } else {
                        showAlert(`❌ ${data.message || 'Error eliminando rol'}`, 'danger');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    showAlert('❌ Error de conexión al eliminar rol', 'danger');
                }
            }
