{{!-- Scripts específicos --}}
<script>
// Variables globales
let currentRolId = null;

// Función para mostrar alertas
function showAlert(message, type = 'success') {
  const alertHtml = `
    <div class="alert alert-${type} alert-dismissible fade show" role="alert">
      <i class="fas fa-${type === 'success' ? 'check-circle' : 'exclamation-triangle'}"></i>
      ${message}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>`;
  document.getElementById('alertContainer').innerHTML = alertHtml;
  
  // Scroll hacia arriba para mostrar la alerta
  window.scrollTo({ top: 0, behavior: 'smooth' });
}

// Función para ver permisos de un rol
async function verPermisos(rolId, nombreRol) {
  currentRolId = rolId;
  
  // Actualizar título del modal
  document.getElementById('modalVerPermisosLabel').innerHTML = 
    `<i class="fas fa-eye text-info"></i> Permisos del Rol: ${nombreRol}`;
  
  // Mostrar loading
  document.getElementById('permisosContent').innerHTML = `
    <div class="text-center">
      <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Cargando permisos...</span>
      </div>
    </div>`;
  
  try {
    const response = await fetch(`/admin/roles/${rolId}/permisos`);
    const data = await response.json();
    
    if (data.success) {
      // Agrupar permisos por módulo
      const permisosPorModulo = {};
      data.permisos.forEach(permiso => {
        if (!permisosPorModulo[permiso.Modulo]) {
          permisosPorModulo[permiso.Modulo] = [];
        }
        permisosPorModulo[permiso.Modulo].push(permiso);
      });
      
      // Generar HTML
      let html = '';
      Object.keys(permisosPorModulo).forEach(modulo => {
        const permisosModulo = permisosPorModulo[modulo];
        const permisosAsignados = permisosModulo.filter(p => p.Asignado).length;
        
        html += `
          <div class="mb-4">
            <h6 class="border-bottom pb-2">
              <i class="fas fa-layer-group text-primary"></i> 
              ${modulo}
              <span class="badge bg-${permisosAsignados > 0 ? 'success' : 'secondary'} ms-2">
                ${permisosAsignados}/${permisosModulo.length}
              </span>
            </h6>
            <div class="row">`;
        
        permisosModulo.forEach(permiso => {
          const checked = permiso.Asignado ? 'checked' : '';
          const badgeClass = permiso.Asignado ? 'success' : 'light';
          
          html += `
            <div class="col-md-6">
              <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" ${checked} disabled>
                <label class="form-check-label">
                  <span class="badge bg-${badgeClass}">${permiso.NombrePermiso}</span>
                  ${permiso.Descripcion ? `<br><small class="text-muted">${permiso.Descripcion}</small>` : ''}
                </label>
              </div>
            </div>`;
        });
        
        html += `
            </div>
          </div>`;
      });
      
      document.getElementById('permisosContent').innerHTML = html;
      
      // Mostrar modal
      new bootstrap.Modal(document.getElementById('modalVerPermisos')).show();
      
    } else {
      showAlert(data.message || 'Error cargando permisos', 'danger');
    }
  } catch (error) {
    console.error('Error:', error);
    showAlert('Error de conexión al cargar permisos', 'danger');
  }
}

// Función para editar rol
async function editarRol(rolId) {
  currentRolId = rolId;
  
  // Cargar datos del rol
  try {
    const response = await fetch(`/admin/roles/${rolId}/permisos`);
    const data = await response.json();
    
    if (data.success) {
      // Buscar información del rol en la tabla
      const rolData = {{{json roles}}}.find(r => r.RolID === rolId);
      
      // Llenar formulario básico
      document.getElementById('editRolId').value = rolId;
      document.getElementById('editNombreRol').value = rolData.NombreRol;
      document.getElementById('editDescripcion').value = rolData.Descripcion || '';
      document.getElementById('editActivo').value = rolData.Activo ? '1' : '0';
      
      // Generar permisos por módulo
      const permisosPorModulo = {};
      data.permisos.forEach(permiso => {
        if (!permisosPorModulo[permiso.Modulo]) {
          permisosPorModulo[permiso.Modulo] = [];
        }
        permisosPorModulo[permiso.Modulo].push(permiso);
      });
      
      // Generar HTML de permisos
      let html = '<div class="accordion" id="editPermisosAccordion">';
      Object.keys(permisosPorModulo).forEach(modulo => {
        const permisosModulo = permisosPorModulo[modulo];
        
        html += `
          <div class="accordion-item">
            <h2 class="accordion-header" id="editHeading${modulo}">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" 
                      data-bs-target="#editCollapse${modulo}" aria-expanded="false" aria-controls="editCollapse${modulo}">
                <i class="fas fa-layer-group me-2"></i>
                <strong>${modulo}</strong>
                <span class="badge bg-secondary ms-2">${permisosModulo.length} permisos</span>
              </button>
            </h2>
            <div id="editCollapse${modulo}" class="accordion-collapse collapse" 
                 aria-labelledby="editHeading${modulo}" data-bs-parent="#editPermisosAccordion">
              <div class="accordion-body">
                <div class="row">`;
        
        permisosModulo.forEach(permiso => {
          const checked = permiso.Asignado ? 'checked' : '';
          
          html += `
            <div class="col-md-6">
              <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" name="permisos" 
                       value="${permiso.PermisoID}" id="editPermiso${permiso.PermisoID}" ${checked}>
                <label class="form-check-label" for="editPermiso${permiso.PermisoID}">
                  <strong>${permiso.NombrePermiso}</strong>
                  ${permiso.Descripcion ? `<br><small class="text-muted">${permiso.Descripcion}</small>` : ''}
                </label>
              </div>
            </div>`;
        });
        
        html += `
                </div>
              </div>
            </div>
          </div>`;
      });
      html += '</div>';
      
      document.getElementById('editPermisosContent').innerHTML = html;
      
      // Mostrar modal
      new bootstrap.Modal(document.getElementById('modalEditarRol')).show();
      
    } else {
      showAlert(data.message || 'Error cargando datos del rol', 'danger');
    }
  } catch (error) {
    console.error('Error:', error);
    showAlert('Error de conexión al cargar datos del rol', 'danger');
  }
}

// Función para eliminar rol
async function eliminarRol(rolId, nombreRol) {
  if (confirm(`¿Estás seguro de que deseas eliminar el rol "${nombreRol}"?\n\nEsta acción no se puede deshacer.`)) {
    try {
      const response = await fetch(`/admin/roles/${rolId}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json'
        }
      });
      
      const data = await response.json();
      
      if (data.success) {
        showAlert(data.message, 'success');
        setTimeout(() => location.reload(), 1500);
      } else {
        showAlert(data.message || 'Error eliminando rol', 'danger');
      }
    } catch (error) {
      console.error('Error:', error);
      showAlert('Error de conexión al eliminar rol', 'danger');
    }
  }
}

// Event listeners
document.addEventListener('DOMContentLoaded', function() {
  // Formulario nuevo rol
  document.getElementById('formNuevoRol').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const permisos = Array.from(formData.getAll('permisos'));
    
    const data = {
      nombreRol: formData.get('nombreRol'),
      descripcion: formData.get('descripcion'),
      activo: formData.get('activo') === '1',
      permisos: permisos
    };
    
    try {
      const response = await fetch('/admin/roles', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      
      const result = await response.json();
      
      if (result.success) {
        showAlert(result.message, 'success');
        bootstrap.Modal.getInstance(document.getElementById('modalNuevoRol')).hide();
        setTimeout(() => location.reload(), 1500);
      } else {
        showAlert(result.message || 'Error creando rol', 'danger');
      }
    } catch (error) {
      console.error('Error:', error);
      showAlert('Error de conexión al crear rol', 'danger');
    }
  });
  
  // Formulario editar rol
  document.getElementById('formEditarRol').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const permisos = Array.from(formData.getAll('permisos'));
    const rolId = formData.get('rolId');
    
    const data = {
      nombreRol: formData.get('nombreRol'),
      descripcion: formData.get('descripcion'),
      activo: formData.get('activo') === '1',
      permisos: permisos
    };
    
    try {
      const response = await fetch(`/admin/roles/${rolId}`, {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data)
      });
      
      const result = await response.json();
      
      if (result.success) {
        showAlert(result.message, 'success');
        bootstrap.Modal.getInstance(document.getElementById('modalEditarRol')).hide();
        setTimeout(() => location.reload(), 1500);
      } else {
        showAlert(result.message || 'Error actualizando rol', 'danger');
      }
    } catch (error) {
      console.error('Error:', error);
      showAlert('Error de conexión al actualizar rol', 'danger');
    }
  });
  
  // Búsqueda en tiempo real
  document.getElementById('searchRoles').addEventListener('input', function() {
    const searchTerm = this.value.toLowerCase();
    const rows = document.querySelectorAll('#rolesTable tbody tr');
    
    rows.forEach(row => {
      const text = row.textContent.toLowerCase();
      row.style.display = text.includes(searchTerm) ? '' : 'none';
    });
  });
  
  // Inicializar tooltips
  var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
  tooltipTriggerList.map(function (tooltipTriggerEl) {
    return new bootstrap.Tooltip(tooltipTriggerEl);
  });
});
