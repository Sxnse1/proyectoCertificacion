        function exportarRoles() {
            showAlert('🚧 Función de exportación en desarrollo', 'info');
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', function() {
            // Formulario crear rol
            document.getElementById('formCrearRol').addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const formData = new FormData(this);
                const permisos = Array.from(formData.getAll('permisos'));
                
                const data = {
                    nombreRol: formData.get('nombreRol'),
                    descripcion: formData.get('descripcion'),
                    activo: formData.get('activo') === '1',
                    permisos: permisos
                };
                
                try {
                    const response = await fetch('/admin/roles', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        showAlert(`✅ ${result.message}`, 'success');
                        bootstrap.Modal.getInstance(document.getElementById('crearRolModal')).hide();
                        setTimeout(() => location.reload(), 2000);
                    } else {
                        showAlert(`❌ ${result.message || 'Error creando rol'}`, 'danger');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    showAlert('❌ Error de conexión al crear rol', 'danger');
                }
            });
            
            // Formulario editar rol
            document.getElementById('formEditarRol').addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const formData = new FormData(this);
                const permisos = Array.from(formData.getAll('permisos'));
                const rolId = formData.get('rolId');
                
                const data = {
                    nombreRol: formData.get('nombreRol'),
                    descripcion: formData.get('descripcion'),
                    activo: formData.get('activo') === '1',
                    permisos: permisos
                };
                
                try {
                    const response = await fetch(`/admin/roles/${rolId}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });
                    
                    const result = await response.json();
                    
                    if (result.success) {
                        showAlert(`✅ ${result.message}`, 'success');
                        bootstrap.Modal.getInstance(document.getElementById('editarRolModal')).hide();
                        setTimeout(() => location.reload(), 2000);
                    } else {
                        showAlert(`❌ ${result.message || 'Error actualizando rol'}`, 'danger');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    showAlert('❌ Error de conexión al actualizar rol', 'danger');
                }
            });
            
            // Búsqueda y filtros mejorados
            document.getElementById('searchRoles').addEventListener('input', function() {
                aplicarFiltros();
            });
            
            document.getElementById('filterEstado').addEventListener('change', function() {
                aplicarFiltros();
            });
            
            document.getElementById('filterPermisos').addEventListener('change', function() {
                aplicarFiltros();
            });
            
            function aplicarFiltros() {
                const searchTerm = document.getElementById('searchRoles').value.toLowerCase();
                const estadoFilter = document.getElementById('filterEstado').value;
                const permisosFilter = document.getElementById('filterPermisos').value;
                const rows = document.querySelectorAll('#rolesTable tbody tr');
                
                rows.forEach(row => {
                    const text = row.textContent.toLowerCase();
                    const estadoBadge = row.querySelector('.badge');
                    const permisosBadge = row.querySelector('.badge-permisos');
                    
                    let showRow = true;
                    
                    // Filtro de búsqueda
                    if (searchTerm && !text.includes(searchTerm)) {
                        showRow = false;
                    }
                    
                    // Filtro de estado
                    if (estadoFilter) {
                        const isActivo = estadoBadge && estadoBadge.textContent.includes('Activo');
                        if (estadoFilter === 'activo' && !isActivo) showRow = false;
                        if (estadoFilter === 'inactivo' && isActivo) showRow = false;
                    }
                    
                    // Filtro de permisos
                    if (permisosFilter && permisosBadge) {
                        const numPermisos = parseInt(permisosBadge.textContent.match(/\d+/)[0]);
                        if (permisosFilter === 'completo' && numPermisos < 20) showRow = false;
                        if (permisosFilter === 'limitado' && numPermisos >= 20) showRow = false;
                    }
                    
                    row.style.display = showRow ? '' : 'none';
                });
            }
        });
    </script>

