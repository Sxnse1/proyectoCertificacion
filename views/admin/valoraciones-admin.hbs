<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Valoraciones - StartEducation</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
    
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #ea580c;
            --primary-hover: #c2410c;
            --success-color: #10b981;
            --warning-color: #f59e0b;
            --danger-color: #ef4444;
            --text-dark: #1f2937;
            --text-muted: #6b7280;
            --border-color: #e5e7eb;
            --bg-light: #f8fafc;
        }

        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            color: var(--text-dark);
            min-height: 100vh;
        }

        .main-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }

        .header-section {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 2rem;
            margin-bottom: 2rem;
            border-left: 5px solid var(--primary-color);
        }

        .header-title {
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .header-title h1 {
            color: var(--text-dark);
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .stats-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.5rem;
            margin-top: 1.5rem;
        }

        .stat-card {
            background: var(--bg-light);
            border-radius: 12px;
            padding: 1.5rem;
            text-align: center;
            border: 1px solid var(--border-color);
            transition: transform 0.2s ease;
        }

        .stat-card:hover {
            transform: translateY(-2px);
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--primary-color);
            display: block;
        }

        .stat-label {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin-top: 0.5rem;
        }

        .controls-section {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .table-section {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .table {
            margin: 0;
        }

        .table th {
            background: var(--bg-light);
            border: none;
            font-weight: 600;
            color: var(--text-dark);
            padding: 1rem;
        }

        .table td {
            border: none;
            padding: 1rem;
            vertical-align: middle;
        }

        .table tbody tr {
            border-bottom: 1px solid #f1f5f9;
            transition: background-color 0.2s ease;
        }

        .table tbody tr:hover {
            background-color: rgba(234, 88, 12, 0.05);
        }

        .rating-stars {
            color: #fbbf24;
        }

        .btn-warning {
            background: var(--warning-color);
            border: none;
            border-radius: 8px;
            color: white;
            font-weight: 600;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }

        .btn-warning:hover {
            background: #d97706;
            color: white;
        }

        .btn-danger {
            background: var(--danger-color);
            border: none;
            border-radius: 8px;
            font-weight: 600;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }

        .btn-danger:hover {
            background: #dc2626;
        }

        .actions-group {
            display: flex;
            gap: 0.5rem;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: var(--text-muted);
        }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }

        @media (max-width: 768px) {
            .main-container {
                padding: 1rem;
            }
            
            .header-section {
                padding: 1.5rem;
            }
            
            .actions-group {
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header Section -->
        <div class="header-section">
            <div class="header-title">
                <h1>
                    <i class="bi bi-star-fill"></i>
                    Gestión de Valoraciones
                </h1>
                <a href="/admin/dashboard" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Volver al Dashboard
                </a>
            </div>

            <!-- Statistics -->
            <div class="stats-row">
                <div class="stat-card">
                    <span class="stat-number">{{totalValoraciones}}</span>
                    <div class="stat-label">Total Valoraciones</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">⭐ {{promedioGeneral}}</span>
                    <div class="stat-label">Promedio General</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{valoracionesMes}}</span>
                    <div class="stat-label">Valoraciones del Mes</div>
                </div>
                <div class="stat-card">
                    <span class="stat-number">{{valoraciones5Estrellas}}</span>
                    <div class="stat-label">5 Estrellas</div>
                </div>
            </div>
        </div>

        <!-- Controls Section -->
        <div class="controls-section">
            <h5 class="mb-0">
                <i class="bi bi-list-ul"></i> Todas las Valoraciones
            </h5>
        </div>

        <!-- Table Section -->
        <div class="table-section">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Usuario</th>
                            <th>Curso</th>
                            <th>Calificación</th>
                            <th>Comentario</th>
                            <th>Fecha</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#if valoraciones}}
                            {{#each valoraciones}}
                            <tr>
                                <td><strong>#{{id_valoracion}}</strong></td>
                                <td>
                                    <strong>{{usuario_nombre}}</strong><br>
                                    <small class="text-muted">{{usuario_email}}</small>
                                </td>
                                <td>
                                    <strong>{{curso_titulo}}</strong><br>
                                    <small class="text-muted">{{instructor_nombre}}</small>
                                </td>
                                <td>
                                    <span class="rating-stars">
                                        {{#each (range 1 calificacion)}}⭐{{/each}}
                                    </span>
                                    <span class="text-muted">({{calificacion}}/5)</span>
                                </td>
                                <td>
                                    <small>{{substring comentario 0 80}}{{#if (gt (length comentario) 80)}}...{{/if}}</small>
                                </td>
                                <td>{{formatDate fecha}}</td>
                                <td>
                                    <div class="actions-group">
                                        <button class="btn btn-sm btn-warning" 
                                                onclick="editarValoracion({{id_valoracion}})"
                                                title="Editar">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-danger" 
                                                onclick="eliminarValoracion({{id_valoracion}})"
                                                title="Eliminar">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            {{/each}}
                        {{else}}
                            <tr>
                                <td colspan="7">
                                    <div class="empty-state">
                                        <i class="bi bi-inbox"></i>
                                        <p>No hay valoraciones registradas</p>
                                    </div>
                                </td>
                            </tr>
                        {{/if}}
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Top Cursos Section -->
        {{#if topCursos}}
        <div class="controls-section mt-4">
            <h5 class="mb-3">
                <i class="bi bi-trophy"></i> Top Cursos Mejor Valorados
            </h5>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Curso</th>
                            <th>Valoraciones</th>
                            <th>Rating Promedio</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each topCursos}}
                        <tr>
                            <td><strong>{{titulo}}</strong></td>
                            <td><span class="badge bg-primary">{{cantidad_valoraciones}}</span></td>
                            <td><span class="rating-stars">⭐ {{rating_promedio}}</span></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        {{/if}}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function editarValoracion(id) {
            const nuevoComentario = prompt('Ingresa el nuevo comentario (moderación):');
            if (nuevoComentario) {
                fetch(`/admin/valoraciones/${id}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ comentario: nuevoComentario })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showSuccessToast('Valoración actualizada exitosamente');
                        location.reload();
                    } else {
                        showErrorToast('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showErrorToast('Error al actualizar valoración');
                });
            }
        }

        function eliminarValoracion(id) {
            if (confirm('¿Estás seguro de eliminar esta valoración?')) {
                fetch(`/admin/valoraciones/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json',
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showSuccessToast('Valoración eliminada exitosamente');
                        location.reload();
                    } else {
                        showErrorToast('Error: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showErrorToast('Error al eliminar valoración');
                });
            }
        }
    </script>
</body>
</html>
