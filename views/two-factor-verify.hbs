<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - StartEducation</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
    
    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #ea580c;
            --primary-hover: #c2410c;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --text-dark: #1f2937;
            --text-muted: #6b7280;
            --border-color: #e5e7eb;
            --bg-light: #f8fafc;
        }

        * {
            font-family: 'Inter', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .verify-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 500px;
            width: 100%;
            position: relative;
        }

        .verify-header {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
            color: white;
            padding: 2.5rem 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .verify-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.15) 0%, transparent 70%);
            animation: pulse 4s ease-in-out infinite;
        }

        @keyframes pulse {
            0%, 100% { opacity: 0.5; transform: scale(1); }
            50% { opacity: 1; transform: scale(1.05); }
        }

        .shield-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            position: relative;
            z-index: 2;
            animation: bounce 2s infinite;
        }

        @keyframes bounce {
            0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
            40% { transform: translateY(-10px); }
            60% { transform: translateY(-5px); }
        }

        .verify-header h1 {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            position: relative;
            z-index: 2;
        }

        .verify-header p {
            opacity: 0.9;
            font-size: 1rem;
            margin: 0;
            position: relative;
            z-index: 2;
        }

        .verify-body {
            padding: 2.5rem 2rem;
        }

        .user-info {
            background: var(--bg-light);
            border-radius: 12px;
            padding: 1rem;
            margin-bottom: 2rem;
            text-align: center;
        }

        .user-avatar {
            width: 50px;
            height: 50px;
            background: var(--primary-color);
            color: white;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .verification-form {
            margin-bottom: 2rem;
        }

        .form-control {
            border-radius: 12px;
            border: 2px solid var(--border-color);
            padding: 1rem;
            font-size: 1.5rem;
            text-align: center;
            letter-spacing: 0.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(234, 88, 12, 0.25);
            transform: translateY(-2px);
        }

        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-hover) 100%);
            border: none;
            border-radius: 12px;
            font-weight: 600;
            padding: 1rem;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            width: 100%;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, var(--primary-hover) 0%, #9a3412 100%);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(234, 88, 12, 0.4);
        }

        .btn-primary:disabled {
            background: #9ca3af;
            transform: none;
            cursor: not-allowed;
        }

        .backup-section {
            border-top: 1px solid var(--border-color);
            padding-top: 1.5rem;
            margin-top: 1.5rem;
        }

        .backup-toggle {
            color: var(--text-muted);
            text-decoration: none;
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: color 0.3s ease;
        }

        .backup-toggle:hover {
            color: var(--primary-color);
        }

        .backup-form {
            display: none;
            margin-top: 1rem;
        }

        .backup-form .form-control {
            font-size: 1rem;
            letter-spacing: 0.1rem;
            text-transform: uppercase;
        }

        .alert {
            border-radius: 8px;
            border: none;
            margin-bottom: 1rem;
        }

        .alert-danger {
            background: #fef2f2;
            color: #991b1b;
        }

        .timer-display {
            background: rgba(234, 88, 12, 0.1);
            border: 1px solid rgba(234, 88, 12, 0.2);
            border-radius: 8px;
            padding: 0.75rem;
            text-align: center;
            margin-bottom: 1rem;
            font-size: 0.9rem;
            color: var(--primary-color);
        }

        .loading-overlay {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(255, 255, 255, 0.95);
            display: none;
            align-items: center;
            justify-content: center;
            z-index: 1000;
            border-radius: 20px;
        }

        .spinner-border {
            color: var(--primary-color);
        }

        @media (max-width: 576px) {
            .verify-header {
                padding: 2rem 1.5rem;
            }
            
            .verify-body {
                padding: 2rem 1.5rem;
            }
            
            .form-control {
                font-size: 1.25rem;
                padding: 0.875rem;
            }
        }
    </style>
</head>
<body>
    <div class="verify-container">
        <!-- Loading Overlay -->
        <div class="loading-overlay" id="loadingOverlay">
            <div>
                <div class="spinner-border mb-3" role="status">
                    <span class="visually-hidden">Verificando...</span>
                </div>
                <p>Verificando c贸digo...</p>
            </div>
        </div>

        <!-- Header -->
        <div class="verify-header">
            <div class="shield-icon">
                <i class="bi bi-shield-check"></i>
            </div>
            <h1>Verificaci贸n Requerida</h1>
            <p>Ingresa tu c贸digo de autenticaci贸n</p>
        </div>

        <div class="verify-body">
            <!-- User Info -->
            <div class="user-info">
                <div class="user-avatar">
                    {{substring userEmail 0 1}}
                </div>
                <div>
                    <strong>{{userEmail}}</strong>
                    <div class="text-muted small">Instructor</div>
                </div>
            </div>

            <!-- Timer -->
            <div class="timer-display">
                <i class="bi bi-clock me-2"></i>
                Los c贸digos cambian cada 30 segundos
            </div>

            <!-- Error Display -->
            <div id="errorAlert" class="alert alert-danger" style="display: none;">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <span id="errorMessage"></span>
            </div>

            <!-- Main Verification Form -->
            <div class="verification-form">
                <form id="verificationForm">
                    <div class="mb-3">
                        <label for="totpCode" class="form-label">C贸digo de Autenticaci贸n</label>
                        <input type="text" class="form-control" id="totpCode" 
                               placeholder="000000" maxlength="6" pattern="[0-9]{6}" required>
                        <div class="form-text text-center">
                            <i class="bi bi-phone me-1"></i>
                            Abre tu aplicaci贸n de autenticaci贸n
                        </div>
                    </div>
                    
                    <button type="submit" class="btn btn-primary" id="verifyBtn">
                        <i class="bi bi-check-circle me-2"></i>Verificar C贸digo
                    </button>
                </form>
            </div>

            <!-- Backup Code Section -->
            <div class="backup-section">
                <a href="#" class="backup-toggle" id="backupToggle">
                    <i class="bi bi-key me-2"></i>
                    驴No tienes acceso a tu aplicaci贸n? Usar c贸digo de respaldo
                </a>
                
                <div class="backup-form" id="backupForm">
                    <form id="backupCodeForm">
                        <div class="mb-3">
                            <label for="backupCode" class="form-label">C贸digo de Respaldo</label>
                            <input type="text" class="form-control" id="backupCode" 
                                   placeholder="XXXX-XXXX" maxlength="9" required>
                            <div class="form-text">
                                Usa uno de los c贸digos de respaldo que guardaste
                            </div>
                        </div>
                        
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-unlock me-2"></i>Usar C贸digo de Respaldo
                        </button>
                    </form>
                </div>
            </div>

            <!-- Footer Links -->
            <div class="text-center mt-4">
                <a href="/auth/login" class="text-muted text-decoration-none">
                    <i class="bi bi-arrow-left me-2"></i>Volver al inicio de sesi贸n
                </a>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5.3 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Auto-format TOTP code
        document.getElementById('totpCode').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 6) value = value.slice(0, 6);
            e.target.value = value;
        });

        // Auto-format backup code
        document.getElementById('backupCode').addEventListener('input', function(e) {
            let value = e.target.value.replace(/[^A-Za-z0-9]/g, '').toUpperCase();
            if (value.length > 8) value = value.slice(0, 8);
            
            // Add dash after 4 characters
            if (value.length > 4) {
                value = value.slice(0, 4) + '-' + value.slice(4);
            }
            
            e.target.value = value;
        });

        // Toggle backup form
        document.getElementById('backupToggle').addEventListener('click', function(e) {
            e.preventDefault();
            const backupForm = document.getElementById('backupForm');
            const isVisible = backupForm.style.display !== 'none';
            
            backupForm.style.display = isVisible ? 'none' : 'block';
            this.innerHTML = isVisible 
                ? '<i class="bi bi-key me-2"></i>驴No tienes acceso a tu aplicaci贸n? Usar c贸digo de respaldo'
                : '<i class="bi bi-x-circle me-2"></i>Cancelar c贸digo de respaldo';
        });

        // Handle TOTP verification
        document.getElementById('verificationForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            await verifyCode('totp');
        });

        // Handle backup code verification
        document.getElementById('backupCodeForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            await verifyCode('backup');
        });

        async function verifyCode(type) {
            const loadingOverlay = document.getElementById('loadingOverlay');
            const errorAlert = document.getElementById('errorAlert');
            
            let code;
            if (type === 'totp') {
                code = document.getElementById('totpCode').value;
                if (code.length !== 6) {
                    showError('Por favor ingresa un c贸digo de 6 d铆gitos');
                    return;
                }
            } else {
                code = document.getElementById('backupCode').value.replace('-', '');
                if (code.length !== 8) {
                    showError('Por favor ingresa un c贸digo de respaldo v谩lido');
                    return;
                }
            }

            loadingOverlay.style.display = 'flex';
            errorAlert.style.display = 'none';

            try {
                const body = type === 'totp' 
                    ? { token: code }
                    : { backup_code: code };

                const response = await fetch('/2fa/verify', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(body)
                });

                const result = await response.json();
                loadingOverlay.style.display = 'none';

                if (result.success) {
                    // Show success and redirect
                    showSuccess('隆Autenticaci贸n exitosa!');
                    setTimeout(() => {
                        window.location.href = result.redirect || '/dashboard';
                    }, 1000);
                } else {
                    showError(result.error);
                }
            } catch (error) {
                console.error('Error:', error);
                loadingOverlay.style.display = 'none';
                showError('Error de conexi贸n. Int茅ntalo nuevamente.');
            }
        }

        function showError(message) {
            const errorAlert = document.getElementById('errorAlert');
            const errorMessage = document.getElementById('errorMessage');
            
            errorMessage.textContent = message;
            errorAlert.style.display = 'block';
            
            // Auto-hide after 5 seconds
            setTimeout(() => {
                errorAlert.style.display = 'none';
            }, 5000);
        }

        function showSuccess(message) {
            const errorAlert = document.getElementById('errorAlert');
            errorAlert.className = 'alert alert-success';
            errorAlert.innerHTML = `<i class="bi bi-check-circle me-2"></i>${message}`;
            errorAlert.style.display = 'block';
        }

        // Auto-focus on load
        document.addEventListener('DOMContentLoaded', function() {
            document.getElementById('totpCode').focus();
        });

        console.log(' Verificaci贸n 2FA iniciada para: {{userEmail}}');
    </script>
</body>
</html>