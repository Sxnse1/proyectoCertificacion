<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} - StartEducation</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            background-color: #1a1a1a;
            color: #ffffff;
            font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        }
        
        .video-page {
            min-height: 100vh;
            padding: 20px;
        }
        
        .video-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        
        .video-header {
            background: linear-gradient(135deg, #2c1810 0%, #8b4513 100%);
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 20px;
            text-align: center;
        }
        
        .video-title {
            color: #d4af37;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 10px;
        }
        
        .user-info {
            color: rgba(255,255,255,0.8);
            font-size: 0.9rem;
        }
        
        .user-badge {
            background: rgba(212, 175, 55, 0.2);
            padding: 4px 12px;
            border-radius: 20px;
            border: 1px solid #d4af37;
            font-size: 0.8rem;
            margin: 0 10px;
        }
        
        /* Reproductor de video - estructura simple */
        .video-wrapper {
            background: #000;
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 8px 32px rgba(0,0,0,0.5);
            margin-bottom: 20px;
        }
        
        /* Controles */
        .video-controls {
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
            margin: 20px 0;
        }
        
        .control-btn {
            background: linear-gradient(135deg, #d4af37 0%, #b8941f 100%);
            color: #1a1a1a;
            border: none;
            padding: 12px 24px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        
        .control-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(212, 175, 55, 0.3);
        }
        
        .control-btn.secondary {
            background: rgba(255,255,255,0.1);
            color: #ffffff;
            border: 1px solid rgba(255,255,255,0.2);
        }
        
        .video-description {
            background: rgba(255,255,255,0.05);
            padding: 20px;
            border-radius: 12px;
            margin-bottom: 20px;
            border: 1px solid rgba(255,255,255,0.1);
        }
        
        .video-description h3 {
            color: #d4af37;
            margin-bottom: 10px;
        }
        
        .progress-section {
            background: rgba(255,255,255,0.05);
            padding: 20px;
            border-radius: 12px;
            border: 1px solid rgba(255,255,255,0.1);
        }
        
        .progress-bar {
            background: rgba(255,255,255,0.1);
            height: 8px;
            border-radius: 4px;
            overflow: hidden;
            margin: 10px 0;
        }
        
        .progress-fill {
            background: linear-gradient(90deg, #d4af37 0%, #b8941f 100%);
            height: 100%;
            width: 0%;
            transition: width 0.3s ease;
        }
        
        /* Mobile responsive */
        @media (max-width: 768px) {
            .video-page {
                padding: 15px;
            }
            
            .video-header {
                padding: 15px;
            }
            
            .video-title {
                font-size: 1.5rem;
            }
            
            .control-btn {
                padding: 10px 20px;
                font-size: 0.9rem;
            }
        }
        
        @media (max-width: 480px) {
            .video-page {
                padding: 10px;
            }
            
            .video-controls {
                flex-direction: column;
            }
            
            .control-btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="video-page">
        <div class="video-container">
            <!-- Header -->
            <div class="video-header">
                <h1 class="video-title">{{videoTitle}}</h1>
                <div class="user-info">
                     {{userName}} <span class="user-badge">{{userRole}}</span>  {{userEmail}}
                </div>
            </div>
            
            <!-- Video Player - Estructura m谩s simple -->
            <div class="video-wrapper">
                <div style="padding:56.25% 0 0 0;position:relative;">
                    <iframe 
                        src="https://player.vimeo.com/video/{{videoId}}?badge=0&amp;autopause=0&amp;player_id=0&amp;app_id=58479" 
                        frameborder="0" 
                        allow="autoplay; fullscreen; picture-in-picture; clipboard-write; encrypted-media; web-share" 
                        referrerpolicy="strict-origin-when-cross-origin" 
                        style="position:absolute;top:0;left:0;width:100%;height:100%;" 
                        title="{{videoTitle}}"
                        id="vimeoPlayer">
                    </iframe>
                </div>
            </div>
            
            <!-- Descripci贸n -->
            <div class="video-description">
                <h3> Descripci贸n del Contenido</h3>
                <p>{{videoDescription}}</p>
            </div>
            
            <!-- Controles -->
            <div class="video-controls">
                <button class="control-btn" onclick="toggleFullscreen()">
                     Pantalla Completa
                </button>
                <button class="control-btn secondary" onclick="restartVideo()">
                     Reiniciar
                </button>
                <button class="control-btn secondary" onclick="togglePlayPause()" id="playPauseBtn">
                    革 Pausar
                </button>
                <a href="/cursos?user={{userName}}&email={{userEmail}}&rol={{userRole}}" class="control-btn">
                     Volver a Cursos
                </a>
            </div>
            
            <!-- Progreso -->
            <div class="progress-section">
                <h3> Progreso</h3>
                <div class="progress-bar">
                    <div class="progress-fill" id="progressFill"></div>
                </div>
                <div style="color: #cccccc; font-size: 0.9rem;">
                    <span id="currentTime">0:00</span> / <span id="totalTime">--:--</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Vimeo Player API -->
    <script src="https://player.vimeo.com/api/player.js"></script>
    
    <script>
        // Inicializar reproductor
        const iframe = document.querySelector('#vimeoPlayer');
        const player = new Vimeo.Player(iframe);
        
        let isPlaying = true;
        let duration = 0;
        
        // Elementos
        const progressFill = document.getElementById('progressFill');
        const currentTimeSpan = document.getElementById('currentTime');
        const totalTimeSpan = document.getElementById('totalTime');
        const playPauseBtn = document.getElementById('playPauseBtn');
        
        // Obtener duraci贸n
        player.getDuration().then(function(videoDuration) {
            duration = videoDuration;
            totalTimeSpan.textContent = formatTime(duration);
        });
        
        // Actualizar progreso
        player.on('timeupdate', function(data) {
            const currentTime = data.seconds;
            const progress = (currentTime / duration) * 100;
            progressFill.style.width = progress + '%';
            currentTimeSpan.textContent = formatTime(currentTime);
        });
        
        // Eventos
        player.on('play', function() {
            isPlaying = true;
            playPauseBtn.innerHTML = '革 Pausar';
        });
        
        player.on('pause', function() {
            isPlaying = false;
            playPauseBtn.innerHTML = '讹 Reproducir';
        });
        
        player.on('ended', function() {
            progressFill.style.width = '100%';
            playPauseBtn.innerHTML = ' Repetir';
        });
        
        // Funciones
        function togglePlayPause() {
            if (isPlaying) {
                player.pause();
            } else {
                player.play();
            }
        }
        
        function restartVideo() {
            player.setCurrentTime(0).then(function() {
                player.play();
            });
        }
        
        function toggleFullscreen() {
            player.requestFullscreen().catch(function() {
                // Fallback
                if (iframe.requestFullscreen) {
                    iframe.requestFullscreen();
                }
            });
        }
        
        function formatTime(seconds) {
            const mins = Math.floor(seconds / 60);
            const secs = Math.floor(seconds % 60);
            return mins + ':' + (secs < 10 ? '0' : '') + secs;
        }
        
        // Atajos de teclado
        document.addEventListener('keydown', function(e) {
            switch(e.code) {
                case 'Space':
                    e.preventDefault();
                    togglePlayPause();
                    break;
                case 'KeyR':
                    if (e.ctrlKey) {
                        e.preventDefault();
                        restartVideo();
                    }
                    break;
                case 'KeyF':
                    if (e.ctrlKey) {
                        e.preventDefault();
                        toggleFullscreen();
                    }
                    break;
            }
        });
        
        console.log(' Reproductor simple inicializado');
    </script>
</body>
</html>