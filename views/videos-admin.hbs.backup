        }

        .dropdown-divider {
            margin: 0.5rem 0;
            border-color: var(--border-color);
        }

        /* Button group styling */
        .btn-group .btn {
            border-radius: 6px 0 0 6px;
        }

        .btn-group .dropdown-toggle-split {
