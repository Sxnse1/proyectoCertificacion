                </div>
                <div class="stat-card">
                    <span class="stat-number text-danger">{{stats.videos_archivados}}</span>
                    <div class="stat-label">Archivados</div>
                </div>
            </div>
        </div>

        <!-- Controls Section -->
        <div class="controls-section">
            <div class="search-controls">
