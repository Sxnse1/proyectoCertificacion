    <!-- Loading Overlay -->
    <div class="loading-overlay" id="loadingOverlay" style="display: none;">
        <div class="text-center">
            <div class="loading-spinner mb-3"></div>
            <h5>Procesando video...</h5>
            <p class="text-muted">Por favor espera mientras subimos tu video a Vimeo</p>
        </div>
    </div>

    <!-- Bootstrap 5.3 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        // Inicializaci√≥n de contadores y m√≥dulos √∫nicos
        document.addEventListener('DOMContentLoaded', function() {
            // Inicializar drag & drop
            initializeDragDrop();
            // Contar videos por estado
            const videos = [
                {{#each videos}}
                {
                    id: {{this.id_video}},
                    estatus: '{{this.estatus}}',
                    id_modulo: {{this.id_modulo}},
                    modulo_titulo: '{{this.modulo_titulo}}'
                }{{#unless @last}},{{/unless}}
                {{/each}}
            ];

            // Contar estados
            let activos = 0, borradores = 0, archivados = 0;
            const modulosUnicos = new Map();

            videos.forEach(video => {
                switch(video.estatus) {
                    case 'activo': activos++; break;
                    case 'borrador': borradores++; break;
                    case 'archivado': archivados++; break;
                }

                // Agregar m√≥dulos √∫nicos
                if (!modulosUnicos.has(video.id_modulo)) {
                    modulosUnicos.set(video.id_modulo, video.modulo_titulo);
                }
            });

            // Actualizar contadores
            document.getElementById('activosCount').textContent = activos;
            document.getElementById('borradoresCount').textContent = borradores;
            document.getElementById('archivadosCount').textContent = archivados;

            // Llenar select de m√≥dulos √∫nicos
            const moduleFilter = document.getElementById('moduleFilter');
            const modalModuleSelect = document.getElementById('id_modulo');
            
            if (moduleFilter) {
                // Limpiar opciones existentes excepto la primera
                while (moduleFilter.children.length > 1) {
                    moduleFilter.removeChild(moduleFilter.lastChild);
                }
                
                // Agregar m√≥dulos √∫nicos
                modulosUnicos.forEach((titulo, id) => {
                    const option = document.createElement('option');
                    option.value = id;
                    option.textContent = titulo;
                    moduleFilter.appendChild(option);
                });
            }

            if (modalModuleSelect) {
                // Cargar m√≥dulos en el modal (esto deber√≠a venir del servidor)
                fetch('/videos-admin/modulos')
                    .then(response => response.json())
                    .then(modulos => {
                        modulos.forEach(modulo => {
                            const option = document.createElement('option');
                            option.value = modulo.id_modulo;
                            option.textContent = modulo.display_name;
                            modalModuleSelect.appendChild(option);
                        });
                    })
                    .catch(error => {
                        console.error('Error cargando m√≥dulos:', error);
                        // Fallback: usar m√≥dulos de los videos existentes
                        modulosUnicos.forEach((titulo, id) => {
                            const option = document.createElement('option');
                            option.value = id;
                            option.textContent = titulo;
                            modalModuleSelect.appendChild(option);
                        });
                    });
            }
        });

        // Filtros de b√∫squeda
        const searchInput = document.getElementById('searchInput');
        const statusFilter = document.getElementById('statusFilter');
        const moduleFilter = document.getElementById('moduleFilter');

        function filterVideos() {
            const searchTerm = searchInput.value.toLowerCase();
            const statusValue = statusFilter.value;
            const moduleValue = moduleFilter.value;

            const videoCards = document.querySelectorAll('[data-status]');

            videoCards.forEach(card => {
                const title = card.querySelector('.video-title').textContent.toLowerCase();
                const description = card.querySelector('.video-description')?.textContent.toLowerCase() || '';
                const status = card.dataset.status;
                const module = card.dataset.module;

                const matchesSearch = title.includes(searchTerm) || description.includes(searchTerm);
                const matchesStatus = !statusValue || status === statusValue;
                const matchesModule = !moduleValue || module === moduleValue;

                if (matchesSearch && matchesStatus && matchesModule) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }

        if (searchInput) searchInput.addEventListener('input', filterVideos);
        if (statusFilter) statusFilter.addEventListener('change', filterVideos);
        if (moduleFilter) moduleFilter.addEventListener('change', filterVideos);

        // Drag & Drop Functionality
        function initializeDragDrop() {
            const dropZone = document.getElementById('fileDropZone');
            const fileInput = document.getElementById('video_file');
            const fileSelectedDiv = document.getElementById('fileSelected');
            const fileContent = dropZone.querySelector('.file-drop-content');

            if (!dropZone || !fileInput) return;

            // Prevent default drag behaviors
            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, preventDefaults, false);
                document.body.addEventListener(eventName, preventDefaults, false);
            });

            // Highlight drop area when item is dragged over it
            ['dragenter', 'dragover'].forEach(eventName => {
                dropZone.addEventListener(eventName, highlight, false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                dropZone.addEventListener(eventName, unhighlight, false);
            });

            // Handle dropped files
            dropZone.addEventListener('drop', handleDrop, false);
            dropZone.addEventListener('click', () => fileInput.click());
            fileInput.addEventListener('change', handleFileSelect);

            function preventDefaults(e) {
                e.preventDefault();
                e.stopPropagation();
            }

            function highlight() {
                dropZone.classList.add('dragover');
            }

            function unhighlight() {
                dropZone.classList.remove('dragover');
            }

            function handleDrop(e) {
                const dt = e.dataTransfer;
                const files = dt.files;
                handleFiles(files);
            }

            function handleFileSelect(e) {
                const files = e.target.files;
                handleFiles(files);
            }

            function handleFiles(files) {
                if (files.length > 0) {
                    const file = files[0];
                    if (file.type.startsWith('video/')) {
                        showSelectedFile(file);
                    } else {
                        alert('Por favor selecciona un archivo de video v√°lido.');
                        clearFileSelection();
                    }
                }
            }

            function showSelectedFile(file) {
                const fileName = file.name;
                const fileSize = (file.size / 1024 / 1024).toFixed(2);
                
                document.getElementById('selectedFileName').textContent = fileName;
                document.getElementById('selectedFileSize').textContent = fileSize + ' MB';
                
                fileContent.style.display = 'none';
                fileSelectedDiv.style.display = 'block';
                dropZone.classList.add('has-file');
            }
        }

        function clearFileSelection() {
            const dropZone = document.getElementById('fileDropZone');
            const fileInput = document.getElementById('video_file');
            const fileSelectedDiv = document.getElementById('fileSelected');
            const fileContent = dropZone.querySelector('.file-drop-content');
            
            fileInput.value = '';
            fileContent.style.display = 'block';
            fileSelectedDiv.style.display = 'none';
            dropZone.classList.remove('has-file');
        }

        // Upload Form Handler
        document.getElementById('uploadForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            const uploadBtn = document.getElementById('uploadBtn');
            const loadingOverlay = document.getElementById('loadingOverlay');
            const uploadProgress = document.getElementById('uploadProgress');
            const progressBar = document.getElementById('progressBar');
            const progressText = document.getElementById('progressText');
            
            // Validar que se haya seleccionado un archivo
            if (!formData.get('video_file') || formData.get('video_file').size === 0) {
                alert('Por favor selecciona un archivo de video.');
                return;
            }
            
            // Show loading
            uploadBtn.disabled = true;
            uploadBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Procesando...';
            loadingOverlay.style.display = 'flex';
            uploadProgress.style.display = 'block';
            
            try {
                const xhr = new XMLHttpRequest();
                
                // Progress tracking
                xhr.upload.addEventListener('progress', function(e) {
                    if (e.lengthComputable) {
                        const percentComplete = (e.loaded / e.total) * 100;
                        progressBar.style.width = percentComplete + '%';
                        progressText.textContent = Math.round(percentComplete) + '%';
                    }
                });
                
                xhr.onload = function() {
                    loadingOverlay.style.display = 'none';
                    
                    if (xhr.status === 200) {
                        const result = JSON.parse(xhr.responseText);
                        if (result.success) {
                            // Show success message with better UX
                            showSuccessMessage('¬°Video subido exitosamente!', 'El video se ha procesado y est√° disponible en tu biblioteca.');
                            setTimeout(() => location.reload(), 2000);
                        } else {
                            showErrorMessage('Error al subir video', result.error);
                        }
                    } else {
                        showErrorMessage('Error de servidor', 'No se pudo subir el video. Int√©ntalo nuevamente.');
                    }
                    
                    // Reset form
                    resetUploadForm();
                };
                
                xhr.onerror = function() {
                    loadingOverlay.style.display = 'none';
                    showErrorMessage('Error de conexi√≥n', 'Verifica tu conexi√≥n a internet e int√©ntalo nuevamente.');
                    resetUploadForm();
                };
                
                xhr.open('POST', '/videos-admin/upload', true);
                xhr.send(formData);
                
            } catch (error) {
                console.error('Error:', error);
                loadingOverlay.style.display = 'none';
                showErrorMessage('Error inesperado', 'Ha ocurrido un error inesperado. Int√©ntalo nuevamente.');
                resetUploadForm();
            }
        });

        function resetUploadForm() {
            const uploadBtn = document.getElementById('uploadBtn');
            const uploadProgress = document.getElementById('uploadProgress');
            
            uploadBtn.disabled = false;
            uploadBtn.innerHTML = '<i class="bi bi-cloud-upload me-2"></i>Subir Video';
            uploadProgress.style.display = 'none';
        }

        function showSuccessMessage(title, message) {
            // Crear notificaci√≥n de √©xito moderna
            const notification = document.createElement('div');
            notification.className = 'position-fixed top-0 end-0 p-3';
            notification.style.zIndex = '9999';
            notification.innerHTML = `
                <div class="toast show" role="alert">
                    <div class="toast-header bg-success text-white">
                        <i class="bi bi-check-circle-fill me-2"></i>
                        <strong class="me-auto">${title}</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">${message}</div>
                </div>
            `;
            document.body.appendChild(notification);
            setTimeout(() => notification.remove(), 5000);
        }

        function showErrorMessage(title, message) {
            // Crear notificaci√≥n de error moderna
            const notification = document.createElement('div');
            notification.className = 'position-fixed top-0 end-0 p-3';
            notification.style.zIndex = '9999';
            notification.innerHTML = `
                <div class="toast show" role="alert">
                    <div class="toast-header bg-danger text-white">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <strong class="me-auto">${title}</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast"></button>
                    </div>
                    <div class="toast-body">${message}</div>
                </div>
            `;
            document.body.appendChild(notification);
            setTimeout(() => notification.remove(), 8000);
        }

        // Funci√≥n para cambiar estado de video
        async function changeVideoStatus(videoId, newStatus, videoTitle) {
            const statusLabels = {
                'activo': 'Publicar',
                'borrador': 'Cambiar a Borrador',
                'archivado': 'Archivar'
            };

            const statusDescriptions = {
                'activo': 'El video estar√° visible para todos los estudiantes inscritos en el curso.',
                'borrador': 'El video ser√° visible solo para instructores y administradores. Los estudiantes no lo ver√°n.',
                'archivado': 'El video se ocultar√° completamente de la plataforma para todos los usuarios.'
            };

            if (!confirm(`¬øEst√°s seguro de que quieres ${statusLabels[newStatus].toLowerCase()} el video "${videoTitle}"?\n\n${statusDescriptions[newStatus]}`)) {
                return;
            }

            const loadingOverlay = document.getElementById('loadingOverlay');
            loadingOverlay.style.display = 'flex';

            try {
                const response = await fetch(`/videos-admin/${videoId}/status`, {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ estatus: newStatus })
                });

                const result = await response.json();
                loadingOverlay.style.display = 'none';

                if (result.success) {
                    const actionMessages = {
                        'activo': 'publicado',
                        'borrador': 'cambiado a borrador',
                        'archivado': 'archivado'
                    };
                    showSuccessMessage(
                        `Video ${actionMessages[newStatus]}`,
                        `El video "${videoTitle}" ha sido ${actionMessages[newStatus]} exitosamente.`
                    );
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showErrorMessage('Error al cambiar estado', result.error);
                }
            } catch (error) {
                console.error('Error:', error);
                loadingOverlay.style.display = 'none';
                showErrorMessage('Error de conexi√≥n', 'No se pudo cambiar el estado del video.');
            }
        }

        // Funci√≥n para eliminar video (mejorada)
        async function deleteVideo(videoId, videoTitle) {
            // Crear modal de confirmaci√≥n personalizado
            const confirmModal = createConfirmationModal(
                'Eliminar Video Permanentemente',
                `¬øEst√°s seguro de que quieres eliminar permanentemente el video "${videoTitle}"?`,
                `
                <div class="alert alert-danger mb-3">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <strong>¬°Advertencia!</strong> Esta acci√≥n no se puede deshacer.
                </div>
                <ul class="text-muted small">
                    <li>El video se eliminar√° de la base de datos</li>
                    <li>El video se eliminar√° de Vimeo</li>
                    <li>Los estudiantes perder√°n acceso inmediatamente</li>
                    <li>Los datos del video no se pueden recuperar</li>
                </ul>
                <p class="text-muted small mt-2">
                    <strong>üí° Sugerencia:</strong> Si solo quieres ocultar el video temporalmente, 
                    considera cambiarlo a "Archivado" en lugar de eliminarlo permanentemente.
                </p>
                `,
                'btn-danger',
                'Eliminar Permanentemente'
            );

            const result = await showModal(confirmModal);
            if (!result) return;

            const loadingOverlay = document.getElementById('loadingOverlay');
            loadingOverlay.style.display = 'flex';

            try {
                const response = await fetch(`/videos-admin/${videoId}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();
                loadingOverlay.style.display = 'none';

                if (result.success) {
                    showSuccessMessage(
                        'Video eliminado',
                        `El video "${videoTitle}" ha sido eliminado permanentemente.`
                    );
                    setTimeout(() => location.reload(), 1500);
                } else {
                    showErrorMessage('Error al eliminar video', result.error);
                }
            } catch (error) {
                console.error('Error:', error);
                loadingOverlay.style.display = 'none';
                showErrorMessage('Error de conexi√≥n', 'No se pudo eliminar el video.');
            }
        }

        // Funci√≥n para crear modal de confirmaci√≥n personalizado
        function createConfirmationModal(title, message, details, btnClass, btnText) {
            return `
                <div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">${title}</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p>${message}</p>
                                ${details}
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                                <button type="button" class="btn ${btnClass}" id="confirmBtn">${btnText}</button>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        // Funci√≥n para mostrar modal y esperar respuesta
        function showModal(modalHtml) {
            return new Promise((resolve) => {
                // Remover modal existente si existe
                const existingModal = document.getElementById('confirmModal');
                if (existingModal) {
                    existingModal.remove();
                }

                // Agregar nuevo modal
                document.body.insertAdjacentHTML('beforeend', modalHtml);
                const modal = new bootstrap.Modal(document.getElementById('confirmModal'));
                
                document.getElementById('confirmBtn').addEventListener('click', () => {
                    modal.hide();
                    resolve(true);
                });

                document.getElementById('confirmModal').addEventListener('hidden.bs.modal', () => {
                    document.getElementById('confirmModal').remove();
                    resolve(false);
                });

                modal.show();
            });
        }

