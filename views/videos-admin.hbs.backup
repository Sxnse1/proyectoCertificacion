                            </div>

                            <!-- Settings -->
                            <div class="col-md-4">
                                <div class="form-card">
                                    <div class="form-card-header">
                                        <i class="bi bi-gear me-2"></i>Configuraci√≥n
                                    </div>
                                    <div class="form-card-body">
                                        <div class="mb-3">
                                            <label for="duracion_minutos" class="form-label fw-semibold">
                                                <i class="bi bi-clock me-1 text-primary"></i>Duraci√≥n
                                            </label>
                                            <div class="input-group">
                                                <input type="number" class="form-control form-control-modern" id="duracion_minutos" 
                                                       name="duracion_minutos" min="1" placeholder="0">
