    </div>

    <!-- Upload Modal - Dise√±o Mejorado -->
    <div class="modal fade" id="uploadModal" tabindex="-1" aria-labelledby="uploadModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg">
                <!-- Modal Header con gradiente -->
                <div class="modal-header border-0 text-white position-relative overflow-hidden" style="background: var(--bg-gradient); border-radius: 16px 16px 0 0;">
                    <div class="d-flex align-items-center">
                        <div class="modal-icon me-3">
                            <i class="bi bi-cloud-upload-fill fs-2"></i>
                        </div>
                        <div>
                            <h4 class="modal-title mb-0" id="uploadModalLabel">Subir Nuevo Video</h4>
                            <p class="mb-0 opacity-90 small">Comparte conocimiento con tus estudiantes</p>
                        </div>
